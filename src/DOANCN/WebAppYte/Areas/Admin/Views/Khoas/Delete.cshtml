@model WebAppYte.Models.Khoa

@{
    ViewBag.Title = "Xóa Chuyên khoa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --danger: #e74a3b;
        --danger-dark: #c0392b;
        --dark: #5a5c69;
        --bg-light: #f8f9fc;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .content-wrapper {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    /* Card Styling */
    .delete-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 500px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
        text-align: center;
    }

    /* Header */
    .card-header-danger {
        background: linear-gradient(135deg, #e74a3b, #d62c1a);
        padding: 30px;
        color: white;
    }

    .warning-icon {
        font-size: 50px;
        margin-bottom: 15px;
        opacity: 0.9;
        animation: pulse 2s infinite;
    }

    .card-title {
        font-weight: 800;
        font-size: 22px;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-subtitle {
        font-size: 14px;
        margin-top: 5px;
        opacity: 0.9;
    }

    /* Body */
    .card-body {
        padding: 30px;
    }

    /* Department Highlight */
    .dept-icon {
        width: 80px;
        height: 80px;
        background-color: #fce8e6;
        color: var(--danger);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 35px;
        margin-bottom: 15px;
    }

    .dept-name {
        font-size: 24px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .desc-box {
        background-color: #f8f9fc;
        border: 1px dashed #d1d3e2;
        border-radius: 8px;
        padding: 15px;
        text-align: left;
        color: #5a5c69;
        font-size: 14px;
        margin-bottom: 25px;
        position: relative;
    }

    .desc-label {
        position: absolute;
        top: -10px;
        left: 15px;
        background: white;
        padding: 0 5px;
        font-size: 12px;
        font-weight: 600;
        color: #858796;
    }

    /* Buttons */
    .btn-delete {
        background-color: var(--danger);
        color: white;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 50px;
        border: none;
        width: 100%;
        font-size: 16px;
        transition: all 0.3s;
        text-transform: uppercase;
        box-shadow: 0 4px 10px rgba(231, 74, 59, 0.3);
        cursor: pointer;
    }

    .btn-delete:hover {
        background-color: var(--danger-dark);
        transform: translateY(-2px);
    }

    .btn-cancel {
        display: block;
        margin-top: 20px;
        color: #858796;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: 0.2s;
    }

    .btn-cancel:hover { color: #5a5c69; text-decoration: underline; }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
</style>

<div class="content-wrapper">
    <div class="delete-card">

        <div class="card-header-danger">
            <i class="fas fa-trash-alt warning-icon"></i>
            <h3 class="card-title">Xóa Chuyên Khoa</h3>
        </div>

        <div class="card-body">

            <div class="dept-icon">
                <i class="fas fa-hospital-symbol"></i>
            </div>

            <div class="dept-name">@Html.DisplayFor(model => model.TenKhoa)</div>

            <div class="desc-box">
                <span class="desc-label">Mô tả</span>
                @if (!string.IsNullOrEmpty(Model.MoTa))
                {
                    <i class="fas fa-quote-left text-muted me-2" style="font-size: 10px;"></i>
                    @Html.DisplayFor(model => model.MoTa)
                }
                else
                {
                    <span class="text-muted">Không có mô tả chi tiết.</span>
                }
            </div>

            <div class="alert alert-warning" style="font-size: 13px; text-align: left;">
                <i class="fas fa-exclamation-circle me-1"></i>
                <strong>Lưu ý:</strong> Việc xóa khoa này có thể ảnh hưởng đến dữ liệu các Bác sĩ thuộc khoa.
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4">
                    <button type="submit" class="btn-delete">
                        <i class="fas fa-times-circle me-2"></i> Xác nhận xóa
                    </button>

                    <a href="@Url.Action("Index")" class="btn-cancel">
                        <i class="fas fa-arrow-left me-1"></i> Hủy bỏ, quay lại danh sách
                    </a>
                </div>
            }
        </div>
    </div>
</div>