@model WebAppYte.Models.LichKham

@{
    ViewBag.Title = "Chi tiết Lịch Khám";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #4e73df;
        --success: #1cc88a;
        --info: #36b9cc;
        --warning: #f6c23e;
        --bg-light: #f8f9fc;
        --border-color: #e3e6f0;
        --text-dark: #2c3e50;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .content-wrapper {
        display: flex;
        justify-content: center;
        padding-top: 30px;
        padding-bottom: 30px;
    }

    /* Card Styling */
    .detail-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.05);
        border: 1px solid var(--border-color);
        width: 100%;
        max-width: 850px;
        overflow: hidden;
    }

    .card-header-custom {
        background-color: white;
        padding: 20px 30px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-title {
        margin: 0;
        font-weight: 700;
        color: var(--success);
        font-size: 18px;
        text-transform: uppercase;
    }

    .card-body-custom {
        padding: 30px;
    }

    /* Time & Status Badge */
    .time-status-row {
        display: flex;
        align-items: center;
        background-color: #f8f9fc;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
        border: 1px dashed #d1d3e2;
    }

    .date-box {
        background-color: white;
        border: 1px solid #e3e6f0;
        border-radius: 8px;
        padding: 10px 20px;
        text-align: center;
        margin-right: 20px;
        min-width: 100px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .date-day {
        font-size: 24px;
        font-weight: 800;
        color: var(--primary);
        display: block;
        line-height: 1;
    }

    .date-month {
        font-size: 12px;
        color: #858796;
        text-transform: uppercase;
        font-weight: 600;
    }

    .time-info h4 {
        margin: 0 0 5px 0;
        font-size: 18px;
        font-weight: 700;
        color: #5a5c69;
    }

    .time-info span {
        font-size: 14px;
        color: #858796;
    }

    .status-badge {
        margin-left: auto;
        background-color: #d1fae5;
        color: #065f46;
        padding: 8px 15px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 13px;
        border: 1px solid #a7f3d0;
    }

    /* People Section */
    .people-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
    }

    .person-card {
        border: 1px solid #e3e6f0;
        border-radius: 8px;
        padding: 15px;
        display: flex;
        align-items: center;
    }

    .person-icon {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .doctor-icon {
        background-color: #e0e7ff;
        color: #4338ca;
    }

    .patient-icon {
        background-color: #fee2e2;
        color: #b91c1c;
    }

    .person-details h5 {
        margin: 0;
        font-size: 15px;
        font-weight: 700;
        color: #2c3e50;
    }

    .person-details span {
        font-size: 12px;
        color: #858796;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Info List */
    .info-list {
        margin-bottom: 30px;
    }

    .info-item {
        margin-bottom: 12px;
        display: flex;
    }

    .info-label {
        width: 120px;
        font-weight: 600;
        color: #5a5c69;
        font-size: 14px;
    }

    .info-value {
        flex: 1;
        color: #2c3e50;
        font-size: 14px;
    }

    /* Result Box */
    .result-box {
        background-color: #f0fdf4; /* Xanh lá nhạt */
        border-left: 4px solid var(--success);
        padding: 20px;
        border-radius: 4px;
    }

    .result-header {
        font-weight: 700;
        color: #15803d;
        margin-bottom: 10px;
        display: block;
    }

    .result-content {
        color: #166534;
        font-size: 15px;
        line-height: 1.6;
    }

    /* Buttons */
    .btn-edit {
        background-color: var(--success);
        color: white;
        padding: 10px 25px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: 0.2s;
        box-shadow: 0 4px 10px rgba(28, 200, 138, 0.2);
    }

        .btn-edit:hover {
            background-color: #17a673;
            color: white;
            transform: translateY(-2px);
        }

    .btn-back {
        color: #858796;
        text-decoration: none;
        font-weight: 500;
        font-size: 14px;
    }

        .btn-back:hover {
            color: var(--text-dark);
        }
</style>

<div class="content-wrapper">
    <div class="detail-card">

        <div class="card-header-custom">
            <h3 class="card-title">
                <i class="fas fa-calendar-check me-2"></i> Chi tiết Lịch hẹn
            </h3>
            <a href="@Url.Action("Index")" class="btn-back">
                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
        </div>

        <div class="card-body-custom">

            <div class="time-status-row">
                <div class="date-box">
                    @if (Model.BatDau.HasValue)
                    {
                        <span class="date-day">@Model.BatDau.Value.Day</span>
                        <span class="date-month">Tháng @Model.BatDau.Value.Month</span>
                    }
                    else
                    { <span>---</span>}
                </div>
                <div class="time-info">
                    <h4>
                        @if (Model.BatDau.HasValue)
                        {@Model.BatDau.Value.ToString("HH:mm")}
                        -
                        @if (Model.KetThuc.HasValue)
                        {@Model.KetThuc.Value.ToString("HH:mm")}
                    </h4>
                    <span><i class="fas fa-clock me-1"></i> Thời gian dự kiến</span>
                </div>
                <div class="status-badge">
                    <i class="fas fa-info-circle me-1"></i> @Html.DisplayFor(model => model.TrangThai)
                </div>
            </div>

            <div class="people-grid">
                <div class="person-card">
                    <div class="person-icon doctor-icon"><i class="fas fa-user-md"></i></div>
                    <div class="person-details">
                        <span>Bác sĩ phụ trách</span>
                        <h5>@Html.DisplayFor(model => model.QuanTri.HoTen)</h5>
                        <small class="text-muted">TK: @Html.DisplayFor(model => model.QuanTri.TaiKhoan)</small>
                    </div>
                </div>
                <div class="person-card">
                    <div class="person-icon patient-icon"><i class="fas fa-user-injured"></i></div>
                    <div class="person-details">
                        <span>Bệnh nhân</span>
                        <h5>@Html.DisplayFor(model => model.NguoiDung.HoTen)</h5>
                    </div>
                </div>
            </div>

            <div class="info-list">
                <div class="info-item">
                    <div class="info-label">Chủ đề khám:</div>
                    <div class="info-value fw-bold text-primary">@Html.DisplayFor(model => model.ChuDe)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Địa điểm:</div>
                    <div class="info-value"><i class="fas fa-map-marker-alt text-danger me-2"></i> @Html.DisplayFor(model => model.DiaChi)</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Triệu chứng/Mô tả:</div>
                    <div class="info-value text-muted" style="font-style: italic;">
                        "@Html.DisplayFor(model => model.MoTa)"
                    </div>
                </div>
            </div>

            <div class="result-box">
                <span class="result-header"><i class="fas fa-file-medical-alt me-2"></i> KẾT QUẢ KHÁM BỆNH</span>
                <div class="result-content">
                    @if (!string.IsNullOrEmpty(Model.KetQuaKham))
                    {
                        @Html.Raw(Model.KetQuaKham.Replace("\n", "<br>"))
                    }
                    else
                    {
                        <span style="opacity: 0.7; font-style: italic;">Chưa có kết quả cập nhật cho lịch khám này.</span>
                    }
                </div>
            </div>

            <div class="mt-4 text-right" style="text-align: right;">
                <a href="@Url.Action("Edit", new { id = Model.IDLichKham })" class="btn-edit">
                    <i class="fas fa-edit me-2"></i> Cập nhật Lịch/Kết quả
                </a>
            </div>

        </div>
    </div>
</div>