@model WebAppYte.Models.QuanTri

@{
    ViewBag.Title = "Xóa Bác sĩ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --danger: #e74a3b;
        --danger-dark: #c0392b;
        --dark: #5a5c69;
        --bg-light: #f8f9fc;
        --border-color: #e3e6f0;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .content-wrapper {
        min-height: 85vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    /* Card Styling */
    .delete-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 550px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
        text-align: center;
    }

    /* Header */
    .card-header-danger {
        background: linear-gradient(135deg, #e74a3b, #d62c1a);
        padding: 35px 30px;
        color: white;
        position: relative;
    }

    .warning-icon {
        font-size: 50px;
        margin-bottom: 15px;
        opacity: 0.9;
        animation: pulse 2s infinite;
    }

    .card-title {
        font-weight: 800;
        font-size: 22px;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-subtitle {
        font-size: 14px;
        margin-top: 5px;
        opacity: 0.9;
        font-weight: 400;
    }

    /* Body */
    .card-body {
        padding: 40px 30px;
    }

    /* Profile Info to Delete */
    .profile-summary {
        margin-bottom: 30px;
    }

    .avatar-preview {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #f8f9fc;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        margin-bottom: 15px;
    }

    .doctor-name {
        font-size: 20px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .doctor-meta {
        color: #858796;
        font-size: 14px;
        margin-bottom: 20px;
    }

    /* Info Box */
    .info-box {
        background-color: #fff5f5;
        border: 1px dashed var(--danger);
        border-radius: 8px;
        padding: 15px;
        text-align: left;
        margin-bottom: 25px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 8px;
        font-size: 14px;
    }
    .info-row:last-child { margin-bottom: 0; }

    .info-label { color: #5a5c69; font-weight: 600; }
    .info-val { color: #2c3e50; font-weight: 500; }

    /* Buttons */
    .btn-delete {
        background-color: var(--danger);
        color: white;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 50px;
        border: none;
        width: 100%;
        font-size: 16px;
        transition: all 0.3s;
        text-transform: uppercase;
        box-shadow: 0 4px 10px rgba(231, 74, 59, 0.3);
        cursor: pointer;
    }

    .btn-delete:hover {
        background-color: var(--danger-dark);
        transform: translateY(-2px);
    }

    .btn-cancel {
        display: block;
        margin-top: 20px;
        color: #858796;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: 0.2s;
    }

    .btn-cancel:hover {
        color: #5a5c69;
        text-decoration: underline;
    }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
</style>

<div class="content-wrapper">
    <div class="delete-card">

        <div class="card-header-danger">
            <i class="fas fa-exclamation-triangle warning-icon"></i>
            <h3 class="card-title">Xóa Bác sĩ</h3>
            <p class="card-subtitle">Hành động này sẽ xóa vĩnh viễn tài khoản bác sĩ khỏi hệ thống.</p>
        </div>

        <div class="card-body">

            <div class="profile-summary">
                <img src="~/images/images/@Model.AnhBia"
                     alt="Avatar"
                     class="avatar-preview"
                     onerror="this.src='https://cdn-icons-png.flaticon.com/512/3774/3774299.png'" />

                <div class="doctor-name">@Html.DisplayFor(model => model.HoTen)</div>
                <div class="doctor-meta">
                    <span class="badge bg-light text-dark border me-1">@Html.DisplayFor(model => model.Khoa.TenKhoa)</span>
                    <span class="badge bg-light text-dark border">@Html.DisplayFor(model => model.TrinhDo)</span>
                </div>
            </div>

            <div class="info-box">
                <div class="info-row">
                    <span class="info-label">Tài khoản:</span>
                    <span class="info-val">@Html.DisplayFor(model => model.TaiKhoan)</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Vai trò:</span>
                    <span class="info-val">@Html.DisplayFor(model => model.VaiTro)</span>
                </div>
                <div class="info-row" style="margin-top: 10px; border-top: 1px solid #ffcccc; padding-top: 10px;">
                    <span class="info-label text-danger">Cảnh báo:</span>
                    <span class="info-val text-danger" style="font-size: 13px;">Không thể khôi phục sau khi xóa.</span>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <button type="submit" class="btn-delete">
                    <i class="fas fa-trash-alt me-2"></i> Xác nhận xóa
                </button>

                <div class="text-center">
                    <a href="@Url.Action("Index")" class="btn-cancel">
                        <i class="fas fa-arrow-left me-1"></i> Hủy bỏ và Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>