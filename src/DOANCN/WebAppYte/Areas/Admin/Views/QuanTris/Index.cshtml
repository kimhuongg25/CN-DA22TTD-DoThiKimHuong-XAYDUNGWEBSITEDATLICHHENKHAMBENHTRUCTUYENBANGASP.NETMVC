@model IEnumerable<WebAppYte.Models.QuanTri>

@{
    ViewBag.Title = "Danh sách Bác sĩ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #4e73df;
        --secondary: #858796;
        --success: #1cc88a;
        --info: #36b9cc;
        --warning: #f6c23e;
        --danger: #e74a3b;
        --light: #f8f9fc;
        --dark: #5a5c69;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fc;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-top: 20px;
    }

    .page-title {
        font-size: 24px;
        font-weight: 700;
        color: var(--dark);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-add-new {
        background-color: var(--primary);
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(78, 115, 223, 0.3);
        transition: all 0.2s;
    }

        .btn-add-new:hover {
            background-color: #2e59d9;
            color: white;
            transform: translateY(-2px);
        }

    /* Table Card */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
        border: 1px solid #e3e6f0;
        overflow: hidden;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
    }

        .table-custom th {
            background-color: #f8f9fc;
            color: var(--primary);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 13px;
            padding: 15px;
            border-bottom: 2px solid #e3e6f0;
            vertical-align: middle;
        }

        .table-custom td {
            padding: 15px;
            vertical-align: middle;
            color: #5a5c69;
            border-bottom: 1px solid #e3e6f0;
            font-size: 14px;
        }

        .table-custom tr:hover {
            background-color: #fafbfc;
        }

    /* Avatar Styling */
    .doctor-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .doctor-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #eaecf4;
    }

    .doctor-name {
        font-weight: 700;
        color: #2c3e50;
        display: block;
    }

    .doctor-role {
        font-size: 12px;
        color: #858796;
    }

    /* Badges */
    .badge-custom {
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block; /* Đảm bảo badge không bị co kéo */
    }

    .badge-level {
        background-color: #e0f2fe;
        color: #0284c7;
    }

    .badge-dept {
        background-color: #dcfce7;
        color: #166534;
    }

    /* Text Truncate */
    .text-limit {
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: block;
        color: #858796;
    }

    /* Actions */
    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 4px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 0 2px;
        transition: 0.2s;
        text-decoration: none;
    }

    .btn-edit {
        background-color: #e0e7ff;
        color: #4338ca;
    }

    .btn-detail {
        background-color: #e0f2fe;
        color: #0369a1;
    }

    .btn-delete {
        background-color: #fee2e2;
        color: #b91c1c;
    }

    .action-btn:hover {
        opacity: 0.8;
    }

    /* Utility class for margin */
    .mb-2 {
        margin-bottom: 8px !important; /* Tạo khoảng cách 8px */
    }
</style>

<div class="container-fluid" style="padding: 0 20px 30px 20px;">

    <div class="page-header">
        <h2 class="page-title"><i class="fas fa-user-md me-2"></i> Quản lý Bác sĩ</h2>
        <a href="@Url.Action("Create")" class="btn-add-new">
            <i class="fas fa-plus me-2"></i> Thêm Bác sĩ
        </a>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th width="25%">Bác sĩ / Vai trò</th>
                        <th width="15%">Tài khoản</th>
                        <th width="20%">Chuyên môn</th>
                        <th width="25%">Giới thiệu</th>
                        <th width="15%" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="doctor-info">
                                    <img src="~/Common/images/@item.AnhBia"
                                         class="doctor-avatar"
                                         onerror="this.src='https://cdn-icons-png.flaticon.com/512/3774/3774299.png'" />

                                    <div>
                                        <span class="doctor-name">@item.HoTen</span>
                                        <span class="doctor-role">@item.VaiTro</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-dark fw-bold">@item.TaiKhoan</span>
                            </td>
                            <td>
                                <div class="mb-2">
                                    <span class="badge-custom badge-dept">
                                        <i class="fas fa-hospital-alt me-1"></i> @Html.DisplayFor(modelItem => item.Khoa.TenKhoa)
                                    </span>
                                </div>

                                <div>
                                    <span class="badge-custom badge-level">
                                        <i class="fas fa-graduation-cap me-1"></i> @item.TrinhDo
                                    </span>
                                </div>
                            </td>
                            <td>
                                <span class="text-limit" title="@item.ThongTinBacSi">
                                    @(string.IsNullOrEmpty(item.ThongTinBacSi) ? "Đang cập nhật..." : item.ThongTinBacSi)
                                </span>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id=item.IDQuanTri })" class="action-btn btn-edit" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id=item.IDQuanTri })" class="action-btn btn-detail" title="Chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id=item.IDQuanTri })" class="action-btn btn-delete" title="Xóa">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Count() == 0)
        {
            <div class="text-center p-5">
                <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="100" style="opacity: 0.5;" />
                <p class="text-muted mt-3">Chưa có dữ liệu bác sĩ.</p>
            </div>
        }
    </div>
</div>