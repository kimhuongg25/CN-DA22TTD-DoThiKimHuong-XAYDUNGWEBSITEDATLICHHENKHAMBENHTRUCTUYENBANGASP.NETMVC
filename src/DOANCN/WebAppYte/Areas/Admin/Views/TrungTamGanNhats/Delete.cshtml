@model WebAppYte.Models.TrungTamGanNhat

@{
    ViewBag.Title = "Xóa Trung tâm Y tế";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --danger: #e74a3b;
        --danger-dark: #c0392b;
        --dark: #5a5c69;
        --bg-light: #f8f9fc;
        --text-muted: #858796;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .content-wrapper {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    /* Card Styling */
    .delete-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 600px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
        text-align: center;
    }

    /* Header */
    .card-header-danger {
        background: linear-gradient(135deg, #e74a3b, #d62c1a);
        padding: 25px;
        color: white;
    }

    .warning-icon {
        font-size: 45px;
        margin-bottom: 15px;
        opacity: 0.9;
        animation: pulse 2s infinite;
    }

    .card-title {
        font-weight: 800;
        font-size: 22px;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Body */
    .card-body {
        padding: 30px;
    }

    /* Hospital Icon */
    .hospital-icon-wrapper {
        width: 80px;
        height: 80px;
        background-color: #fce8e6;
        color: var(--danger);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 35px;
        margin-bottom: 20px;
    }

    /* Info */
    .center-name {
        font-size: 24px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .location-badge {
        display: inline-block;
        background-color: #f8f9fc;
        color: #5a5c69;
        padding: 8px 16px;
        border-radius: 50px;
        font-weight: 600;
        border: 1px solid #e3e6f0;
        margin-bottom: 25px;
    }

    .desc-preview {
        background-color: #fff;
        border: 1px dashed #d1d3e2;
        border-radius: 8px;
        padding: 15px;
        text-align: left;
        color: #858796;
        font-size: 14px;
        max-height: 150px;
        overflow-y: auto;
        margin-bottom: 25px;
    }

    /* Buttons */
    .btn-delete {
        background-color: var(--danger);
        color: white;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 50px;
        border: none;
        width: 100%;
        font-size: 16px;
        transition: all 0.3s;
        text-transform: uppercase;
        box-shadow: 0 4px 10px rgba(231, 74, 59, 0.3);
        cursor: pointer;
    }

    .btn-delete:hover {
        background-color: var(--danger-dark);
        transform: translateY(-2px);
    }

    .btn-cancel {
        display: block;
        margin-top: 20px;
        color: var(--text-muted);
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: 0.2s;
    }

    .btn-cancel:hover { color: #5a5c69; text-decoration: underline; }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
</style>

<div class="content-wrapper">
    <div class="delete-card">

        <div class="card-header-danger">
            <i class="fas fa-exclamation-triangle warning-icon"></i>
            <h3 class="card-title">Xóa Cơ sở Y tế</h3>
            <p style="font-size: 13px; margin: 5px 0 0 0; opacity: 0.9;">Hành động này sẽ xóa dữ liệu vĩnh viễn.</p>
        </div>

        <div class="card-body">

            <div class="hospital-icon-wrapper">
                <i class="fas fa-hospital"></i>
            </div>

            <div class="center-name">@Html.DisplayFor(model => model.TenTrungTam)</div>

            <div class="location-badge">
                <i class="fas fa-map-marker-alt text-danger me-2"></i>
                @Html.DisplayFor(model => model.Huyen.TenHuyen)
            </div>

            <div class="desc-preview">
                <strong><i class="fas fa-align-left me-1"></i> Trích dẫn mô tả:</strong><br />
                @if (!string.IsNullOrEmpty(Model.Mota))
                {
                    // Dùng Raw vì nội dung này được tạo từ CKEditor
                    @Html.Raw(Model.Mota)
                }
                else
                {
                    <span>Chưa có mô tả.</span>
                }
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4">
                    <button type="submit" class="btn-delete">
                        <i class="fas fa-trash-alt me-2"></i> Xác nhận xóa
                    </button>

                    <a href="@Url.Action("Index")" class="btn-cancel">
                        <i class="fas fa-arrow-left me-1"></i> Hủy bỏ và Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>