@model IEnumerable<WebAppYte.Models.TrungTamGanNhat>

@{
    ViewBag.Title = "Quản lý Cơ sở Y tế";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #4e73df;
        --secondary: #858796;
        --success: #1cc88a;
        --info: #36b9cc;
        --warning: #f6c23e;
        --danger: #e74a3b;
        --bg-light: #f8f9fc;
        --dark: #5a5c69;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fc;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-top: 20px;
    }

    .page-title {
        font-size: 24px;
        font-weight: 700;
        color: var(--dark);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-add-new {
        background-color: var(--success);
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(28, 200, 138, 0.3);
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
    }

        .btn-add-new:hover {
            background-color: #17a673;
            color: white;
            transform: translateY(-2px);
        }

    /* Table Card */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
        border: 1px solid #e3e6f0;
        overflow: hidden;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
    }

        .table-custom th {
            background-color: #f8f9fc;
            color: var(--primary);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 13px;
            padding: 15px;
            border-bottom: 2px solid #e3e6f0;
            vertical-align: middle;
        }

        .table-custom td {
            padding: 15px;
            vertical-align: middle;
            color: #5a5c69;
            border-bottom: 1px solid #e3e6f0;
            font-size: 14px;
        }

        .table-custom tr:hover {
            background-color: #fafbfc;
        }

    /* Content Styles */
    .center-info {
        display: flex;
        align-items: center;
    }

    .center-icon {
        width: 40px;
        height: 40px;
        background-color: #e0f2fe;
        color: #0369a1;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        margin-right: 15px;
    }

    .center-name {
        font-weight: 600;
        color: #2c3e50;
        font-size: 15px;
    }

    .location-badge {
        display: inline-flex;
        align-items: center;
        padding: 5px 12px;
        background-color: #fef3c7;
        color: #92400e;
        border-radius: 50px;
        font-size: 12px;
        font-weight: 600;
        border: 1px solid #fde68a;
    }

    /* Action Buttons (Updated Style) */
    .action-group {
        display: flex;
        justify-content: center;
        gap: 8px;
    }

    .action-btn {
        width: 34px;
        height: 34px;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.2s;
        border: 1px solid transparent;
    }

    .btn-edit {
        background-color: #eef2ff;
        color: #4f46e5;
    }

    .btn-detail {
        background-color: #ecfdf5;
        color: #059669;
    }

    .btn-delete {
        background-color: #fef2f2;
        color: #dc2626;
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 3px 5px rgba(0,0,0,0.1);
    }

    .btn-edit:hover {
        background-color: #4f46e5;
        color: white;
    }

    .btn-detail:hover {
        background-color: #059669;
        color: white;
    }

    .btn-delete:hover {
        background-color: #dc2626;
        color: white;
    }
</style>

<div class="container-fluid" style="padding: 0 20px 30px 20px;">

    <div class="page-header">
        <h2 class="page-title"><i class="fas fa-hospital-symbol me-2"></i> Quản lý Cơ sở Y tế</h2>
        <a href="@Url.Action("Create")" class="btn-add-new">
            <i class="fas fa-plus me-2"></i> Thêm Cơ sở mới
        </a>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th width="50%">Tên Trung tâm / Bệnh viện</th>
                        <th width="30%">Khu vực (Quận/Huyện)</th>
                        <th width="20%" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="center-info">
                                    <div class="center-icon">
                                        <i class="fas fa-hospital-alt"></i>
                                    </div>
                                    <span class="center-name">@Html.DisplayFor(modelItem => item.TenTrungTam)</span>
                                </div>
                            </td>

                            <td>
                                <span class="location-badge">
                                    <i class="fas fa-map-marker-alt me-2"></i>
                                    @Html.DisplayFor(modelItem => item.Huyen.TenHuyen)
                                </span>
                            </td>

                            <td class="text-center">
                                <div class="action-group">
                                    <a href="@Url.Action("Edit", new { id=item.IDTrungTam })" class="action-btn btn-edit" title="Chỉnh sửa">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id=item.IDTrungTam })" class="action-btn btn-detail" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id=item.IDTrungTam })" class="action-btn btn-delete" title="Xóa">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Count() == 0)
        {
            <div class="text-center p-5">
                <i class="fas fa-clinic-medical fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có dữ liệu trung tâm y tế.</p>
            </div>
        }
    </div>
</div>