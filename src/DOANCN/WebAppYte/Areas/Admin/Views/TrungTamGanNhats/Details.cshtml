@model WebAppYte.Models.TrungTamGanNhat

@{
    ViewBag.Title = "Chi tiết Cơ sở Y tế";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #4e73df;
        --success: #1cc88a;
        --info: #36b9cc;
        --text-dark: #2c3e50;
        --bg-light: #f8f9fc;
        --border-color: #e3e6f0;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .content-wrapper {
        display: flex;
        justify-content: center;
        padding: 40px 20px;
    }

    /* Card Styling */
    .detail-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.05);
        border: 1px solid var(--border-color);
        width: 100%;
        max-width: 800px;
        overflow: hidden;
    }

    .card-header-custom {
        background-color: white;
        padding: 20px 30px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-title {
        margin: 0;
        font-weight: 700;
        color: var(--primary);
        font-size: 18px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-body-custom {
        padding: 40px;
    }

    /* Header Section (Icon + Name) */
    .center-header {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        padding-bottom: 25px;
        border-bottom: 1px solid #f1f3f9;
    }

    .center-icon {
        width: 80px;
        height: 80px;
        background-color: #e0f2fe; /* Xanh dương nhạt */
        color: #0284c7;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 36px;
        margin-right: 25px;
        flex-shrink: 0;
    }

    .center-info h1 {
        margin: 0 0 10px 0;
        font-size: 26px;
        font-weight: 800;
        color: var(--text-dark);
        line-height: 1.3;
    }

    .location-badge {
        display: inline-flex;
        align-items: center;
        background-color: #f0fdf4; /* Nền xanh lá nhạt */
        color: #166534; /* Chữ xanh lá đậm */
        padding: 6px 15px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 14px;
        border: 1px solid #bbf7d0;
    }

    /* Description Section */
    .desc-section {
        margin-top: 10px;
    }

    .desc-label {
        font-size: 14px;
        font-weight: 700;
        color: #858796;
        text-transform: uppercase;
        margin-bottom: 15px;
        display: block;
        letter-spacing: 1px;
    }

    .desc-content {
        font-size: 16px;
        line-height: 1.7;
        color: #444;
        background-color: #fff;
    }

        /* CSS cho nội dung HTML từ CKEditor */
        .desc-content img {
            max-width: 100%;
            height: auto;
            border-radius: 6px;
            margin: 15px 0;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .desc-content p {
            margin-bottom: 15px;
        }

        .desc-content ul, .desc-content ol {
            margin-left: 20px;
            margin-bottom: 15px;
        }

    /* Footer Buttons */
    .action-bar {
        background-color: #f8f9fc;
        padding: 20px 40px;
        border-top: 1px solid #e3e6f0;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 15px;
    }

    .btn-edit {
        background-color: var(--primary);
        color: white;
        padding: 10px 25px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: 0.2s;
    }

        .btn-edit:hover {
            background-color: #2e59d9;
            color: white;
            transform: translateY(-2px);
        }

    .btn-back {
        color: #5a5c69;
        text-decoration: none;
        font-weight: 600;
        padding: 10px 15px;
    }

        .btn-back:hover {
            color: var(--text-dark);
            text-decoration: underline;
        }
</style>

<div class="content-wrapper">
    <div class="detail-card">

        <div class="card-header-custom">
            <h3 class="card-title">
                <i class="fas fa-info-circle me-2"></i> Thông tin Cơ sở Y tế
            </h3>
            <a href="@Url.Action("Index")" class="btn-back" style="padding:0; font-weight:500;">
                <i class="fas fa-times"></i> Đóng
            </a>
        </div>

        <div class="card-body-custom">

            <div class="center-header">
                <div class="center-icon">
                    <i class="fas fa-hospital-alt"></i>
                </div>
                <div class="center-info">
                    <h1>@Html.DisplayFor(model => model.TenTrungTam)</h1>
                    <div class="location-badge">
                        <i class="fas fa-map-marker-alt me-2"></i>
                        @Html.DisplayFor(model => model.Huyen.TenHuyen)
                    </div>
                </div>
            </div>

            <div class="desc-section">
                <span class="desc-label">Giới thiệu & Thông tin</span>
                <div class="desc-content">
                    @if (!string.IsNullOrEmpty(Model.Mota))
                    {
                        // Sử dụng Html.Raw để hiển thị nội dung CKEditor
                        @Html.Raw(Model.Mota)
                    }
                    else
                    {
                        <div class="p-4 text-center bg-light rounded text-muted">
                            <i>Chưa có thông tin mô tả cho trung tâm này.</i>
                        </div>
                    }
                </div>
            </div>

        </div>

        <div class="action-bar">
            <a href="@Url.Action("Index")" class="btn-back">Quay lại danh sách</a>
            <a href="@Url.Action("Edit", new { id = Model.IDTrungTam })" class="btn-edit">
                <i class="fas fa-pen me-2"></i> Chỉnh sửa thông tin
            </a>
        </div>

    </div>
</div>