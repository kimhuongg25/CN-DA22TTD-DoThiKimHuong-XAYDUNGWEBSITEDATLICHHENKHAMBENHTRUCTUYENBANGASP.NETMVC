@model WebAppYte.Models.NguoiDung

@{
    ViewBag.Title = "Thêm mới Người Dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #4e73df;
        --success: #1cc88a;
        --bg-light: #f8f9fc;
        --border-color: #e3e6f0;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fc;
    }

    /* Card Styling */
    .form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border: 1px solid var(--border-color);
        margin: 20px auto;
        max-width: 1000px;
    }

    .card-header {
        background-color: white;
        padding: 20px 30px;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 12px 12px 0 0;
    }

    .card-title {
        margin: 0;
        font-weight: 700;
        color: #4e73df;
        font-size: 18px;
    }

    .card-body {
        padding: 30px;
    }

    /* Form Controls */
    .form-label {
        font-weight: 600;
        color: #5a5c69;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #d1d3e2;
        padding: 10px 15px;
        font-size: 14px;
        height: auto;
        width: 100%;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(78, 115, 223, 0.1);
            outline: none;
        }

    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    /* Section Header */
    .section-header {
        font-size: 15px;
        font-weight: 700;
        color: #858796;
        text-transform: uppercase;
        margin-bottom: 20px;
        border-bottom: 2px solid #eaecf4;
        padding-bottom: 10px;
        letter-spacing: 1px;
    }

    /* Buttons */
    .btn-create {
        background-color: var(--success);
        color: white;
        padding: 12px 30px;
        border-radius: 6px;
        border: none;
        font-weight: 600;
        transition: 0.2s;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
    }

        .btn-create:hover {
            background-color: #17a673;
            transform: translateY(-1px);
        }

    .btn-back {
        color: #858796;
        text-decoration: none;
        font-weight: 500;
        font-size: 14px;
        margin-right: 20px;
        transition: 0.2s;
    }

        .btn-back:hover {
            color: #5a5c69;
        }

    /* Layout Helpers */
    .row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -15px;
    }

    .col-md-6 {
        width: 50%;
        padding: 0 15px;
        box-sizing: border-box;
    }

    .col-md-4 {
        width: 33.33%;
        padding: 0 15px;
        box-sizing: border-box;
    }

    .col-12 {
        width: 100%;
        padding: 0 15px;
        box-sizing: border-box;
    }

    .mb-3 {
        margin-bottom: 20px;
    }

    @@media (max-width: 768px) {
        .col-md-6, .col-md-4 {
            width: 100%;
        }
    }
</style>

<div class="form-card">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-user-plus me-2"></i> Thêm mới Người Dùng
        </h3>
        <a href="@Url.Action("Index")" class="btn-back">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>

    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

            <div class="section-header text-primary">
                <i class="fas fa-user-shield me-2"></i> Thông tin Đăng nhập
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Tài khoản (Username)</label>
                    @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên đăng nhập" } })
                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Mật khẩu</label>
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", type = "password", placeholder = "Nhập mật khẩu" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "example@email.com" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                </div>
            </div>

            <div class="section-header text-success mt-3">
                <i class="fas fa-id-card me-2"></i> Thông tin Cá nhân
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Họ và Tên</label>
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ tên đầy đủ" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Số CMND/CCCD</label>
                    @Html.EditorFor(model => model.SoCMND, new { htmlAttributes = new { @class = "form-control", placeholder = "Số căn cước" } })
                    @Html.ValidationMessageFor(model => model.SoCMND, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Giới tính</label>
                    @Html.DropDownList("IDGioiTinh", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDGioiTinh, "", new { @class = "text-danger small" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Số điện thoại</label>
                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại" } })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Quận / Huyện</label>
                    @Html.DropDownList("IDHuyen", null, "--- Chọn Quận/Huyện ---", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDHuyen, "", new { @class = "text-danger small" })
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Địa chỉ chi tiết</label>
                    @Html.EditorFor(model => model.DiaChiCuThe, new { htmlAttributes = new { @class = "form-control", placeholder = "Số nhà, đường, phường..." } })
                    @Html.ValidationMessageFor(model => model.DiaChiCuThe, "", new { @class = "text-danger small" })
                </div>
            </div>

            <div class="section-header text-info mt-3">
                <i class="fas fa-sticky-note me-2"></i> Ghi chú thêm
            </div>

            <div class="mb-3">
                <label class="form-label">Thông tin khác (Tiền sử bệnh, ghi chú...)</label>
                @Html.TextAreaFor(model => model.ThongTinKhac, new { @class = "form-control", rows = 4, placeholder = "Nhập các thông tin bổ sung nếu có..." })
                @Html.ValidationMessageFor(model => model.ThongTinKhac, "", new { @class = "text-danger small" })
            </div>

            <hr style="margin: 20px 0; border: 0; border-top: 1px solid #e3e6f0;">

            <div class="text-right" style="text-align: right;">
                <button type="submit" class="btn-create">
                    <i class="fas fa-check me-2"></i> Tạo tài khoản
                </button>
            </div>
        }
    </div>
</div>