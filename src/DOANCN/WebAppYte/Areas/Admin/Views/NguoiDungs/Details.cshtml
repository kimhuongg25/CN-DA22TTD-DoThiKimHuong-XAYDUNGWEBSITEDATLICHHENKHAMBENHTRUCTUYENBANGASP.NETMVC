@model WebAppYte.Models.NguoiDung

@{
    ViewBag.Title = "Hồ sơ người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #4e73df;
        --secondary: #858796;
        --success: #1cc88a;
        --info: #36b9cc;
        --bg-light: #f8f9fc;
        --border-color: #e3e6f0;
        --text-dark: #2c3e50;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .profile-container {
        padding: 30px;
        display: flex;
        justify-content: center;
    }

    /* Card Styling */
    .profile-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.05);
        border: none;
        width: 100%;
        max-width: 950px;
        overflow: hidden;
        display: flex;
        flex-wrap: wrap;
    }

    /* Sidebar (Left) */
    .profile-sidebar {
        background: linear-gradient(to bottom, #f8f9fc, #ffffff);
        width: 30%;
        padding: 40px 20px;
        text-align: center;
        border-right: 1px solid var(--border-color);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .avatar-placeholder {
        width: 120px;
        height: 120px;
        background-color: #e0e7ff;
        color: var(--primary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 50px;
        margin-bottom: 20px;
        border: 4px solid white;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .profile-name {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 5px;
    }

    .profile-username {
        color: #858796;
        font-size: 14px;
        background-color: #f1f3f9;
        padding: 4px 12px;
        border-radius: 20px;
        display: inline-block;
        margin-bottom: 20px;
    }

    /* Content (Right) */
    .profile-content {
        width: 70%;
        padding: 40px;
    }

    .section-title {
        font-size: 15px;
        font-weight: 700;
        color: #4e73df;
        text-transform: uppercase;
        margin-bottom: 20px;
        border-bottom: 2px solid #f1f3f9;
        padding-bottom: 8px;
        letter-spacing: 0.5px;
    }

    .info-row {
        display: flex;
        margin-bottom: 15px;
        align-items: flex-start;
    }

    .info-label {
        width: 140px;
        font-weight: 600;
        color: #5a5c69;
        font-size: 14px;
        display: flex;
        align-items: center;
    }

        .info-label i {
            width: 20px;
            color: #b7b9cc;
            margin-right: 8px;
        }

    .info-value {
        flex: 1;
        color: #2c3e50;
        font-weight: 500;
        font-size: 15px;
    }

    /* Note Box */
    .note-box {
        background-color: #fffbf0;
        border: 1px dashed #f6c23e;
        border-radius: 8px;
        padding: 15px;
        font-size: 14px;
        color: #8a6d3b;
        margin-top: 10px;
    }

    /* Buttons */
    .btn-action-group {
        margin-top: auto;
        width: 100%;
    }

    .btn-edit {
        background-color: var(--primary);
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        display: block;
        margin-bottom: 10px;
        transition: 0.2s;
        box-shadow: 0 4px 6px rgba(78, 115, 223, 0.2);
    }

        .btn-edit:hover {
            background-color: #2e59d9;
            color: white;
            transform: translateY(-2px);
        }

    .btn-back {
        color: #858796;
        font-weight: 500;
        text-decoration: none;
        font-size: 14px;
    }

        .btn-back:hover {
            color: var(--text-dark);
            text-decoration: underline;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .profile-sidebar, .profile-content {
            width: 100%;
            border-right: none;
        }

        .profile-sidebar {
            border-bottom: 1px solid var(--border-color);
        }
    }
</style>

<div class="profile-container">
    <div class="profile-card">

        <div class="profile-sidebar">
            <div class="avatar-placeholder">
                <i class="fas fa-user"></i>
            </div>

            <div class="profile-name">@Html.DisplayFor(model => model.HoTen)</div>
            <div class="profile-username">@@@Html.DisplayFor(model => model.TaiKhoan)</div>

            <div class="btn-action-group">
                <a href="@Url.Action("Edit", new { id = Model.IDNguoiDung })" class="btn-edit">
                    <i class="fas fa-user-edit me-2"></i> Chỉnh sửa
                </a>
                <a href="@Url.Action("Index")" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>

        <div class="profile-content">

            <div class="section-title">
                <i class="fas fa-address-book me-2"></i> Thông tin liên hệ
            </div>

            <div class="info-row">
                <div class="info-label"><i class="fas fa-phone-alt"></i> Điện thoại:</div>
                <div class="info-value">@Html.DisplayFor(model => model.DienThoai)</div>
            </div>
            <div class="info-row">
                <div class="info-label"><i class="fas fa-envelope"></i> Email:</div>
                <div class="info-value">@Html.DisplayFor(model => model.Email)</div>
            </div>
            <div class="info-row">
                <div class="info-label"><i class="fas fa-map-marker-alt"></i> Địa chỉ:</div>
                <div class="info-value">
                    @Html.DisplayFor(model => model.DiaChiCuThe)
                    @if (Model.Huyen != null)
                    {
                        <span>, @Html.DisplayFor(model => model.Huyen.TenHuyen)</span>
                    }
                </div>
            </div>

            <div class="section-title mt-4">
                <i class="fas fa-id-card me-2"></i> Thông tin cá nhân
            </div>

            <div class="info-row">
                <div class="info-label"><i class="fas fa-venus-mars"></i> Giới tính:</div>
                <div class="info-value">
                    @if (Model.GioiTinh != null)
                    {
                        <span class="badge bg-light text-dark border">@Html.DisplayFor(model => model.GioiTinh.GioiTinh1)</span>
                    }
                    else
                    {
                        <span>---</span>
                    }
                </div>
            </div>
            <div class="info-row">
                <div class="info-label"><i class="fas fa-id-badge"></i> CMND/CCCD:</div>
                <div class="info-value">@Html.DisplayFor(model => model.SoCMND)</div>
            </div>
            <div class="info-row">
                <div class="info-label"><i class="fas fa-key"></i> Mật khẩu:</div>
                <div class="info-value">
                    <span class="text-muted">••••••••</span>
                    <span style="font-size: 12px; color: #858796;">(Đã ẩn vì lý do bảo mật)</span>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ThongTinKhac))
            {
                <div class="section-title mt-4">
                    <i class="fas fa-sticky-note me-2"></i> Ghi chú thêm
                </div>
                <div class="note-box">
                    @Html.DisplayFor(model => model.ThongTinKhac)
                </div>
            }

        </div>
    </div>
</div>