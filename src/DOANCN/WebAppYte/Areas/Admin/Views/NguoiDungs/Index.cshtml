@model IEnumerable<WebAppYte.Models.NguoiDung>

@{
    ViewBag.Title = "Quản lý Người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #4e73df;
        --secondary: #858796;
        --success: #1cc88a;
        --info: #36b9cc;
        --warning: #f6c23e;
        --danger: #e74a3b;
        --light: #f8f9fc;
        --dark: #5a5c69;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f8f9fc;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        padding-top: 20px;
    }

    .page-title {
        font-size: 24px;
        font-weight: 700;
        color: var(--dark);
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .btn-add-new {
        background-color: var(--primary);
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(78, 115, 223, 0.3);
        transition: all 0.2s;
    }

        .btn-add-new:hover {
            background-color: #2e59d9;
            color: white;
            transform: translateY(-2px);
        }

    /* Table Card */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
        border: 1px solid #e3e6f0;
        overflow: hidden;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 0;
    }

        .table-custom th {
            background-color: #f8f9fc;
            color: var(--primary);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 13px;
            padding: 15px;
            border-bottom: 2px solid #e3e6f0;
            vertical-align: middle;
        }

        .table-custom td {
            padding: 15px;
            vertical-align: middle;
            color: #5a5c69;
            border-bottom: 1px solid #e3e6f0;
            font-size: 14px;
        }

        .table-custom tr:hover {
            background-color: #fafbfc;
        }

    /* User Info Styling */
    .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .user-avatar-icon {
        width: 45px;
        height: 45px;
        background-color: #eaecf4;
        color: #858796;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .user-name {
        font-weight: 700;
        color: #2c3e50;
        display: block;
    }

    .user-account {
        font-size: 12px;
        color: #858796;
        background: #f1f3f9;
        padding: 2px 8px;
        border-radius: 10px;
    }

    /* Badges */
    .badge-custom {
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-male {
        background-color: #e0f2fe;
        color: #0284c7;
    }
    /* Xanh dương */
    .badge-female {
        background-color: #fce7f3;
        color: #db2777;
    }
    /* Hồng */

    /* Contact Info */
    .contact-row {
        display: flex;
        align-items: center;
        margin-bottom: 4px;
        font-size: 13px;
    }

        .contact-row i {
            width: 20px;
            color: #b7b9cc;
        }

    /* Actions */
    .action-btn {
        width: 32px;
        height: 32px;
        border-radius: 4px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 0 2px;
        transition: 0.2s;
        text-decoration: none;
    }

    .btn-edit {
        background-color: #e0e7ff;
        color: #4338ca;
    }

    .btn-detail {
        background-color: #e0f2fe;
        color: #0369a1;
    }

    .btn-delete {
        background-color: #fee2e2;
        color: #b91c1c;
    }

    .action-btn:hover {
        opacity: 0.8;
    }
</style>

<div class="container-fluid" style="padding: 0 20px 30px 20px;">

    <div class="page-header">
        <h2 class="page-title"><i class="fas fa-users me-2"></i> Quản lý Người dùng</h2>
        <a href="@Url.Action("Create")" class="btn-add-new">
            <i class="fas fa-plus me-2"></i> Thêm Người dùng
        </a>
    </div>

    <div class="table-card">
        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th width="25%">Thông tin người dùng</th>
                        <th width="20%">Liên hệ</th>
                        <th width="15%">Cá nhân</th>
                        <th width="25%">Địa chỉ</th>
                        <th width="15%" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="user-info">
                                    <div class="user-avatar-icon">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <span class="user-name">@item.HoTen</span>
                                        <span class="user-account">
                                            <i class="fas fa-at"></i> @item.TaiKhoan
                                        </span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="contact-row">
                                    <i class="fas fa-envelope"></i> @item.Email
                                </div>
                                <div class="contact-row">
                                    <i class="fas fa-phone"></i> @item.DienThoai
                                </div>
                            </td>
                            <td>
                                <div class="mb-1">
                                    @if (item.GioiTinh != null)
                                    {
                                        if (item.GioiTinh.GioiTinh1 == "Nam")
                                        {
                                            <span class="badge-custom badge-male"><i class="fas fa-mars"></i> Nam</span>
                                        }
                                        else
                                        {
                                            <span class="badge-custom badge-female"><i class="fas fa-venus"></i> Nữ</span>
                                        }
                                    }
                                </div>
                                <div style="font-size: 13px; color: #858796;">
                                    <i class="far fa-id-card"></i> @item.SoCMND
                                </div>
                            </td>
                            <td>
                                <span style="display: block; line-height: 1.4;">
                                    @item.DiaChiCuThe
                                </span>
                                @if (item.Huyen != null)
                                {
                                    <small class="text-muted"><i class="fas fa-map-marker-alt"></i> @item.Huyen.TenHuyen</small>
                                }
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id=item.IDNguoiDung })" class="action-btn btn-edit" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Details", new { id=item.IDNguoiDung })" class="action-btn btn-detail" title="Chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id=item.IDNguoiDung })" class="action-btn btn-delete" title="Xóa">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Count() == 0)
        {
            <div class="text-center p-5">
                <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có dữ liệu người dùng.</p>
            </div>
        }
    </div>
</div>