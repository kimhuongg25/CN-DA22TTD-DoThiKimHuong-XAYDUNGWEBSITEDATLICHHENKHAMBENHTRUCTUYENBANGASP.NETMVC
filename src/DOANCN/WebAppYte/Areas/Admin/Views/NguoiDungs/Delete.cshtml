@model WebAppYte.Models.NguoiDung

@{
    ViewBag.Title = "Xóa Người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --danger: #e74a3b;
        --danger-dark: #c0392b;
        --secondary: #858796;
        --dark: #5a5c69;
        --bg-light: #f8f9fc;
        --border-color: #e3e6f0;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .content-wrapper {
        min-height: 85vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    /* Card Styling */
    .delete-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 650px; /* Rộng hơn chút để chứa thông tin chi tiết */
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
    }

    /* Header */
    .card-header-danger {
        background: linear-gradient(135deg, #e74a3b, #d62c1a);
        padding: 30px;
        color: white;
        text-align: center;
    }

    .warning-icon {
        font-size: 50px;
        margin-bottom: 15px;
        opacity: 0.9;
        animation: pulse 2s infinite;
    }

    .card-title {
        font-weight: 800;
        font-size: 22px;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card-subtitle {
        font-size: 14px;
        margin-top: 5px;
        opacity: 0.9;
    }

    /* Body */
    .card-body {
        padding: 30px 40px;
    }

    /* User Profile Highlight */
    .user-highlight {
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 1px dashed var(--border-color);
    }

    .user-avatar-placeholder {
        width: 80px;
        height: 80px;
        background-color: #fce8e6;
        color: var(--danger);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
        margin-bottom: 15px;
    }

    .user-name {
        font-size: 20px;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 5px;
    }

    .user-account {
        color: #858796;
        font-size: 14px;
        background: #f1f3f9;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 500;
    }

    /* Info Grid */
    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 20px;
    }

    .info-item {
        font-size: 14px;
    }

    .info-label {
        color: #858796;
        font-weight: 600;
        display: block;
        margin-bottom: 4px;
    }

    .info-value {
        color: var(--dark);
        font-weight: 500;
        border-bottom: 1px solid #f1f3f9;
        padding-bottom: 5px;
    }

    .info-icon {
        color: var(--secondary);
        width: 20px;
        text-align: center;
        margin-right: 5px;
    }

    /* Buttons */
    .btn-delete {
        background-color: var(--danger);
        color: white;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 50px;
        border: none;
        width: 100%;
        font-size: 16px;
        transition: all 0.3s;
        text-transform: uppercase;
        box-shadow: 0 4px 10px rgba(231, 74, 59, 0.3);
        cursor: pointer;
    }

    .btn-delete:hover {
        background-color: var(--danger-dark);
        transform: translateY(-2px);
    }

    .btn-cancel {
        display: block;
        margin-top: 20px;
        text-align: center;
        color: #858796;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: 0.2s;
    }

    .btn-cancel:hover { color: #5a5c69; text-decoration: underline; }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }

    @@media (max-width: 600px) {
        .info-grid { grid-template-columns: 1fr; }
    }
</style>

<div class="content-wrapper">
    <div class="delete-card">

        <div class="card-header-danger">
            <i class="fas fa-user-times warning-icon"></i>
            <h3 class="card-title">Xóa Người Dùng</h3>
            <p class="card-subtitle">Hành động này sẽ xóa vĩnh viễn tài khoản và dữ liệu liên quan.</p>
        </div>

        <div class="card-body">

            <div class="user-highlight">
                <div class="user-avatar-placeholder">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-name">@Html.DisplayFor(model => model.HoTen)</div>
                <span class="user-account">
                    <i class="fas fa-at"></i> @Html.DisplayFor(model => model.TaiKhoan)
                </span>
            </div>

            <div class="info-grid">
                <div class="info-column">
                    <div class="info-item mb-3">
                        <span class="info-label"><i class="fas fa-envelope info-icon"></i> Email</span>
                        <div class="info-value">@Html.DisplayFor(model => model.Email)</div>
                    </div>
                    <div class="info-item mb-3">
                        <span class="info-label"><i class="fas fa-phone info-icon"></i> Điện thoại</span>
                        <div class="info-value">@Html.DisplayFor(model => model.DienThoai)</div>
                    </div>
                    <div class="info-item">
                        <span class="info-label"><i class="fas fa-venus-mars info-icon"></i> Giới tính</span>
                        <div class="info-value">@Html.DisplayFor(model => model.GioiTinh.GioiTinh1)</div>
                    </div>
                </div>

                <div class="info-column">
                    <div class="info-item mb-3">
                        <span class="info-label"><i class="fas fa-id-card info-icon"></i> CMND/CCCD</span>
                        <div class="info-value">@Html.DisplayFor(model => model.SoCMND)</div>
                    </div>
                    <div class="info-item mb-3">
                        <span class="info-label"><i class="fas fa-map-marker-alt info-icon"></i> Địa chỉ</span>
                        <div class="info-value">
                            @Html.DisplayFor(model => model.DiaChiCuThe), @Html.DisplayFor(model => model.Huyen.TenHuyen)
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ThongTinKhac))
                    {
                        <div class="info-item">
                            <span class="info-label"><i class="fas fa-sticky-note info-icon"></i> Ghi chú</span>
                            <div class="info-value text-muted small">@Html.DisplayFor(model => model.ThongTinKhac)</div>
                        </div>
                    }
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4">
                    <button type="submit" class="btn-delete">
                        <i class="fas fa-trash-alt me-2"></i> Xác nhận xóa
                    </button>

                    <a href="@Url.Action("Index")" class="btn-cancel">
                        <i class="fas fa-arrow-left me-1"></i> Hủy bỏ và Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>