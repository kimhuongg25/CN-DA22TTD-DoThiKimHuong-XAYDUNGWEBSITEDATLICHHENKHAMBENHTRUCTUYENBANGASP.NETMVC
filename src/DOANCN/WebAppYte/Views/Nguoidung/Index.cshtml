@model IEnumerable<WebAppYte.Models.NguoiDung>

@{
    ViewBag.Title = "Hồ sơ cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d6efd;
        --secondary: #6c757d;
        --card-border: #e9ecef;
        --bg-color: #f4f6f9;
        --text-dark: #343a40;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-color);
    }

    .content-wrapper {
        min-height: 80vh;
        padding: 30px 15px;
    }

    .page-title {
        color: var(--primary);
        font-weight: 700;
        margin-bottom: 25px;
        border-bottom: 2px solid #e9ecef;
        padding-bottom: 10px;
        display: inline-block;
    }

    /* Profile Card Style */
    .profile-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border: 1px solid var(--card-border);
        overflow: hidden;
        margin-bottom: 30px;
        transition: transform 0.2s;
    }

        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

    /* Header: Avatar & Name */
    .profile-header {
        background: linear-gradient(135deg, var(--primary), #0a58ca);
        padding: 30px;
        text-align: center;
        color: white;
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 35px;
        margin-bottom: 15px;
        border: 3px solid rgba(255,255,255,0.5);
    }

    .profile-name {
        font-size: 22px;
        font-weight: 700;
        margin: 0;
    }

    .profile-role {
        font-size: 14px;
        opacity: 0.8;
        margin-top: 5px;
    }

    /* Body: Information List */
    .profile-body {
        padding: 25px;
    }

    .info-group {
        margin-bottom: 15px;
        border-bottom: 1px dashed #eee;
        padding-bottom: 10px;
    }

        .info-group:last-child {
            border-bottom: none;
        }

    .info-label {
        font-size: 13px;
        color: var(--secondary);
        font-weight: 600;
        text-transform: uppercase;
        display: block;
        margin-bottom: 4px;
    }

    .info-value {
        font-size: 15px;
        color: var(--text-dark);
        font-weight: 500;
    }

        .info-value i {
            width: 20px;
            color: var(--primary);
            text-align: center;
            margin-right: 8px;
        }

    /* Footer: Actions */
    .profile-footer {
        background-color: #f8f9fa;
        padding: 15px 25px;
        border-top: 1px solid var(--card-border);
        display: flex;
        justify-content: space-between;
    }

    .btn-action {
        padding: 8px 16px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-edit {
        background-color: #ffc107;
        color: #856404;
        border: 1px solid #ffeeba;
    }

        .btn-edit:hover {
            background-color: #ffca2c;
            color: #856404;
        }

    .btn-detail {
        background-color: var(--primary);
        color: white;
    }

        .btn-detail:hover {
            background-color: #0b5ed7;
            color: white;
        }
</style>

<div class="container content-wrapper">
    <h2 class="page-title"><i class="fas fa-id-card me-2"></i> Hồ sơ người dùng</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 col-md-12">
                <div class="profile-card">
                    <div class="profile-header">
                        <div class="avatar-circle">
                            <i class="fas fa-user"></i>
                        </div>
                        <h3 class="profile-name">@Html.DisplayFor(modelItem => item.HoTen)</h3>
                        <div class="profile-role">
                            <i class="fas fa-user-tag me-1"></i> Tài khoản: @Html.DisplayFor(modelItem => item.TaiKhoan)
                        </div>
                    </div>

                    <div class="profile-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-group">
                                    <span class="info-label">Liên hệ</span>
                                    <div class="info-value mb-1"><i class="fas fa-envelope"></i> @Html.DisplayFor(modelItem => item.Email)</div>
                                    <div class="info-value"><i class="fas fa-phone"></i> @Html.DisplayFor(modelItem => item.DienThoai)</div>
                                </div>
                                <div class="info-group">
                                    <span class="info-label">Giới tính</span>
                                    <div class="info-value"><i class="fas fa-venus-mars"></i> @Html.DisplayFor(modelItem => item.GioiTinh.GioiTinh1)</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-group">
                                    <span class="info-label">Địa chỉ</span>
                                    <div class="info-value mb-1">
                                        <i class="fas fa-map-marker-alt"></i>
                                        @Html.DisplayFor(modelItem => item.DiaChiCuThe)
                                    </div>
                                    <div class="info-value small text-muted ms-4">
                                        (Huyện: @Html.DisplayFor(modelItem => item.Huyen.TenHuyen))
                                    </div>
                                </div>
                                <div class="info-group">
                                    <span class="info-label">Số CMND/CCCD</span>
                                    <div class="info-value"><i class="fas fa-id-card"></i> @Html.DisplayFor(modelItem => item.SoCMND)</div>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(item.ThongTinKhac))
                        {
                            <div class="info-group mt-2">
                                <span class="info-label">Ghi chú khác</span>
                                <div class="info-value text-muted fst-italic">
                                    <i class="fas fa-info-circle"></i> @Html.DisplayFor(modelItem => item.ThongTinKhac)
                                </div>
                            </div>
                        }

                        <div class="info-group mt-2">
                            <span class="info-label">Mật khẩu</span>
                            <div class="info-value d-flex align-items-center">
                                <i class="fas fa-lock"></i> ••••••••••••
                            </div>
                        </div>
                    </div>

                    <div class="profile-footer">
                        <a href="@Url.Action("Edit", new { id = item.IDNguoiDung })" class="btn-action btn-edit">
                            <i class="fas fa-edit me-1"></i> Chỉnh sửa
                        </a>
                        <a href="@Url.Action("Details", new { id = item.IDNguoiDung })" class="btn-action btn-detail">
                            <i class="fas fa-eye me-1"></i> Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>