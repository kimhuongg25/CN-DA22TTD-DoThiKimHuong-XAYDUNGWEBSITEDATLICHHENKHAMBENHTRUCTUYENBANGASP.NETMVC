@model WebAppYte.Models.NguoiDung

@{
    ViewBag.Title = "Cập nhật hồ sơ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d6efd;
        --warning: #ffc107;
        --warning-hover: #e0a800;
        --bg-color: #f4f6f9;
        --card-border: #e9ecef;
        --text-color: #333;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Inter', sans-serif;
    }

    .content-wrapper {
        min-height: 85vh;
        display: flex;
        justify-content: center;
        padding: 40px 15px;
    }

    .edit-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border: none;
        width: 100%;
        max-width: 900px; /* Rộng hơn để chứa 2 cột */
        overflow: hidden;
    }

    /* Header */
    .card-header-custom {
        background-color: white;
        padding: 25px 30px;
        border-bottom: 1px solid var(--card-border);
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .form-title {
        color: #333;
        font-weight: 700;
        margin: 0;
        font-size: 24px;
    }

    /* Body */
    .card-body-custom {
        padding: 30px;
    }

    .section-divider {
        font-size: 14px;
        font-weight: 700;
        color: var(--primary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: 10px;
        margin-bottom: 20px;
        border-bottom: 1px solid #eee;
        padding-bottom: 8px;
    }

    /* Form Controls */
    .form-label-custom {
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
    }

    .form-control-custom {
        height: 48px;
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding-left: 15px;
        font-size: 15px;
        width: 100%;
        transition: all 0.2s;
    }

        .form-control-custom:focus {
            border-color: var(--warning);
            box-shadow: 0 0 0 4px rgba(255, 193, 7, 0.2);
            outline: none;
        }

    /* Buttons */
    .btn-save {
        background-color: var(--warning);
        color: #212529;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 8px;
        border: none;
        font-size: 16px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-save:hover {
            background-color: var(--warning-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.4);
        }

    .btn-cancel {
        color: #6c757d;
        font-weight: 600;
        text-decoration: none;
        padding: 12px 20px;
        display: inline-block;
        transition: color 0.2s;
    }

        .btn-cancel:hover {
            color: #343a40;
        }

    /* Validation & Alert */
    .text-danger {
        font-size: 13px;
        margin-top: 4px;
        display: block;
    }

    .alert-success-custom {
        background-color: #d1e7dd;
        border-color: #badbcc;
        color: #0f5132;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }
</style>

<div class="content-wrapper">
    <div class="edit-card">

        <div class="card-header-custom">
            <h3 class="form-title"><i class="fas fa-user-edit text-warning me-2"></i> Cập nhật hồ sơ</h3>
            <a href="@Url.Action("Details", new { id = Model.IDNguoiDung })" class="btn-cancel">
                <i class="fas fa-times"></i> Hủy bỏ
            </a>
        </div>

        <div class="card-body-custom">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDNguoiDung)

                /* Hiển thị thông báo thành công nếu có */
                if (ViewBag.capnhat != null)
                {
                    <div class="alert-success-custom">
                        <i class="fas fa-check-circle me-2" style="font-size: 20px;"></i>
                        <strong>@ViewBag.capnhat</strong>
                    </div>
                }

                <div class="section-divider">Thông tin cá nhân</div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.HoTen, htmlAttributes: new { @class = "form-label-custom" })
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control form-control-custom" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.IDGioiTinh, "Giới tính", htmlAttributes: new { @class = "form-label-custom" })
                        @Html.DropDownList("IDGioiTinh", null, htmlAttributes: new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(model => model.IDGioiTinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label-custom" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-custom" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.DienThoai, htmlAttributes: new { @class = "form-label-custom" })
                        @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control form-control-custom" } })
                        @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.SoCMND, htmlAttributes: new { @class = "form-label-custom" })
                        @Html.EditorFor(model => model.SoCMND, new { htmlAttributes = new { @class = "form-control form-control-custom" } })
                        @Html.ValidationMessageFor(model => model.SoCMND, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="section-divider mt-2">Thông tin đăng nhập</div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.TaiKhoan, htmlAttributes: new { @class = "form-label-custom" })
             
    @*tên đăng nhập là duy nhất và không cho phép người dùng tự ý thay đổi*@

                        @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control form-control-custom", @readonly = "readonly", @style = "background-color: #e9ecef;" } })
                        @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "form-label-custom" })
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control form-control-custom" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="section-divider mt-2">Địa chỉ liên hệ</div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        @Html.LabelFor(model => model.IDHuyen, "Huyện/Quận", htmlAttributes: new { @class = "form-label-custom" })
                        @Html.DropDownList("IDHuyen", null, htmlAttributes: new { @class = "form-control form-control-custom" })
                        @Html.ValidationMessageFor(model => model.IDHuyen, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-8 mb-3">
                        @Html.LabelFor(model => model.DiaChiCuThe, htmlAttributes: new { @class = "form-label-custom" })
                        @Html.EditorFor(model => model.DiaChiCuThe, new { htmlAttributes = new { @class = "form-control form-control-custom" } })
                        @Html.ValidationMessageFor(model => model.DiaChiCuThe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-4">
                    @Html.LabelFor(model => model.ThongTinKhac, htmlAttributes: new { @class = "form-label-custom" })
                    @Html.EditorFor(model => model.ThongTinKhac, new { htmlAttributes = new { @class = "form-control form-control-custom" } })
                    @Html.ValidationMessageFor(model => model.ThongTinKhac, "", new { @class = "text-danger" })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn-save">
                        <i class="fas fa-save me-2"></i> Lưu thay đổi
                    </button>
                </div>
            }
        </div>
    </div>
</div>