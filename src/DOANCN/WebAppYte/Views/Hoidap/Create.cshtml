@model WebAppYte.Models.HoiDap

@{
    ViewBag.Title = "Gửi câu hỏi tư vấn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d6efd;
        --primary-hover: #0b5ed7;
        --secondary: #6c757d;
        --card-border: #e9ecef;
        --bg-color: #f4f6f9;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-color);
    }

    /* Wrapper để đẩy footer xuống cuối */
    .content-wrapper {
        min-height: 85vh;
        display: flex;
        align-items: center; /* Căn giữa dọc */
        justify-content: center; /* Căn giữa ngang */
        padding: 30px 15px;
    }

    /* Card Style */
    .form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        border: none;
        overflow: hidden;
        width: 100%;
        max-width: 700px; /* Giới hạn chiều rộng cho đẹp */
    }

    .card-header-custom {
        background-color: white;
        padding: 25px 30px;
        border-bottom: 1px solid var(--card-border);
    }

    .form-title {
        color: var(--primary);
        font-weight: 700;
        margin: 0;
        font-size: 24px;
        display: flex;
        align-items: center;
    }

    .card-body-custom {
        padding: 30px;
    }

    /* Form Controls */
    .form-label-custom {
        font-weight: 600;
        color: #343a40;
        margin-bottom: 10px;
        display: block;
    }

    .form-label-custom i {
        color: var(--primary);
        width: 20px;
        text-align: center;
        margin-right: 5px;
    }

    .form-control-custom {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 10px 15px;
        font-size: 15px;
        transition: border-color 0.3s, box-shadow 0.3s;
        width: 100%;
        height: 40px;
    }

    .form-control-custom:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.15);
        outline: none;
    }

    textarea.form-control-custom {
        resize: vertical; /* Chỉ cho phép kéo giãn chiều dọc */
        min-height: 120px;
    }

    /* Buttons */
    .btn-submit {
        background: linear-gradient(135deg, var(--primary), var(--primary-hover));
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        width: 100%;
        font-size: 16px;
        transition: transform 0.2s;
        margin-top: 10px;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        color: white;
    }

    .btn-back {
        text-decoration: none;
        color: var(--secondary);
        font-weight: 500;
        display: inline-block;
        margin-top: 20px;
        transition: color 0.2s;
    }

    .btn-back:hover {
        color: #333;
    }

    /* Validation */
    .field-validation-error {
        color: #dc3545;
        font-size: 0.875em;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="content-wrapper">
    <div class="form-card">
        
        <div class="card-header-custom">
            <h3 class="form-title">
                <i class="fas fa-edit me-2"></i> Thêm câu hỏi mới
            </h3>
            <p class="text-muted mb-0 mt-1 small">Gửi câu hỏi để nhận tư vấn từ đội ngũ bác sĩ chuyên môn</p>
        </div>

        <div class="card-body-custom">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                
                if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mb-4">
                        @Html.ValidationSummary(true, "Vui lòng kiểm tra lại thông tin:")
                    </div>
                }

                <div class="mb-4">
                    <label class="form-label-custom">
                        <i class="fas fa-user-circle"></i> Người gửi
                    </label>
                    @Html.DropDownList("IDNguoiDung", null, new { @class = "form-control form-control-custom" })
                    @Html.ValidationMessageFor(model => model.IDNguoiDung, "", new { @class = "text-danger" })
                </div>

                <div class="mb-4">
                    <label class="form-label-custom">
                        <i class="fas fa-question-circle"></i> Nội dung câu hỏi
                    </label>
                    @Html.TextAreaFor(model => model.CauHoi, new { @class = "form-control form-control-custom", placeholder = "Mô tả chi tiết triệu chứng hoặc vấn đề của bạn...", rows = "5" })
                    @Html.ValidationMessageFor(model => model.CauHoi, "", new { @class = "text-danger field-validation-error" })
                </div>

                <div class="mb-4">
                    <label class="form-label-custom">
                        <i class="fas fa-sticky-note"></i> Ghi chú thêm (nếu có)
                    </label>
                    @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control form-control-custom", placeholder = "Thông tin bổ sung..." } })
                    @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger field-validation-error" })
                </div>

                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-paper-plane me-2"></i> Gửi câu hỏi
                </button>
            }

            <div class="text-center">
                <a href="@Url.Action("Index", "HoiDap", new { id = ViewBag.id })" class="btn-back">
                    <i class="fas fa-arrow-left small"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>