@model WebAppYte.Models.LichKham

@{
    ViewBag.Title = "Đặt lịch khám";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var u = Session["user"] as WebAppYte.Models.NguoiDung;
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d6efd;
        --secondary: #6c757d;
        --success: #198754;
        --bg-light: #f4f6f9;
        --card-border: #e9ecef;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .content-wrapper {
        min-height: 85vh;
        padding: 40px 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Booking Card */
    .booking-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
        width: 100%;
        max-width: 800px;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        padding: 25px 30px;
        color: white;
        text-align: center;
    }

    .card-title {
        font-weight: 700;
        font-size: 24px;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .card-subtitle {
        font-size: 14px;
        opacity: 0.9;
        margin-top: 5px;
    }

    .card-body-custom {
        padding: 40px;
    }

    /* Form Controls */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label-custom {
        font-weight: 600;
        color: #343a40;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
        color: var(--primary);
    }

    .form-control-custom {
        border-left: none;
        border-radius: 0 8px 8px 0;
        height: 48px; /* Tăng chiều cao ô nhập liệu */
        font-size: 15px;
        border-color: #ced4da;
    }

    .form-control-custom:focus {
        box-shadow: none;
        border-color: #86b7fe;
    }

    .input-group:focus-within .input-group-text {
        border-color: #86b7fe;
    }

    /* Textarea adjustment */
    textarea.form-control-custom {
        height: auto;
        padding-top: 12px;
    }

    /* Readonly inputs */
    .input-readonly {
        background-color: #e9ecef !important;
        color: #495057;
        cursor: not-allowed;
    }

    /* Button */
    .btn-submit {
        background-color: var(--success);
        color: white;
        font-weight: 700;
        padding: 12px 40px;
        border-radius: 50px;
        border: none;
        font-size: 16px;
        transition: all 0.3s;
        width: 100%;
        text-transform: uppercase;
        box-shadow: 0 4px 15px rgba(25, 135, 84, 0.3);
    }

    .btn-submit:hover {
        background-color: #157347;
        transform: translateY(-2px);
    }

    /* Responsive */
    media (max-width: 768px) {
        .card-body-custom { padding: 25px; }
        .btn-submit { font-size: 14px; }
    }
</style>

<div class="container content-wrapper">
    <div class="booking-card">

        <div class="card-header-custom">
            <h2 class="card-title"><i class="fas fa-calendar-plus me-2"></i> Đặt lịch hẹn khám bệnh</h2>
            <p class="card-subtitle">Vui lòng điền đầy đủ thông tin để chúng tôi hỗ trợ bạn tốt nhất</p>
        </div>

        <div class="card-body-custom">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger mb-4" })

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label-custom">Người đặt lịch</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input type="text" class="form-control form-control-custom input-readonly" value="@u.HoTen" readonly />
                                <input type="hidden" name="IDNguoiDung" value="@u.IDNguoiDung" />
                            </div>
                            @Html.ValidationMessageFor(model => model.IDNguoiDung, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="form-group">
                            <label class="form-label-custom">Chọn Bác sĩ</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-md"></i></span>
                                @Html.DropDownList("IDQuanTri", null, "--- Chọn Bác sĩ ---", new { @class = "form-control form-control-custom" })
                            </div>
                            @Html.ValidationMessageFor(model => model.IDQuanTri, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="form-group">
                            <label class="form-label-custom">Thời gian mong muốn</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="far fa-clock"></i></span>
                                <input class="form-control form-control-custom" data-val="true"
                                       data-val-date="The field Bắt đầu must be a date."
                                       id="BatDau" name="BatDau" type="datetime-local" />
                            </div>
                            @Html.ValidationMessageFor(model => model.BatDau, "", new { @class = "text-danger small mt-1" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label-custom">Địa chỉ liên hệ</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control form-control-custom", placeholder = "Nhập địa chỉ của bạn..." } })
                            </div>
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger small mt-1" })
                        </div>

                        <div class="form-group">
                            <label class="form-label-custom">Triệu chứng / Lý do khám</label>
                            <div class="input-group">
                                <span class="input-group-text" style="align-items: flex-start; padding-top: 12px;"><i class="fas fa-notes-medical"></i></span>
                                @Html.TextAreaFor(model => model.ChuDe, new { @class = "form-control form-control-custom", rows = "4", placeholder = "Mô tả sơ qua tình trạng sức khỏe..." })
                            </div>
                            @Html.ValidationMessageFor(model => model.ChuDe, "", new { @class = "text-danger small mt-1" })
                        </div>
                    </div>
                </div>

                <hr class="my-4" style="border-top: 1px dashed #e9ecef;">

                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <button type="submit" class="btn-submit">
                            <i class="fas fa-check-circle me-2"></i> Xác nhận đặt lịch
                        </button>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "LichKham")" class="text-muted text-decoration-none small">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>