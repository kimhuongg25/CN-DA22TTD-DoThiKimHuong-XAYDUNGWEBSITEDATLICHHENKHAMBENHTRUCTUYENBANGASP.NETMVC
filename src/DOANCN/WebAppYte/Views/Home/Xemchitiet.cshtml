@using WebAppYte.Models
@model Tintuc

@{
    ViewBag.Title = Model.Tieude; // Đặt title tab trình duyệt theo tên bài viết
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;1,300;1,400&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    /* Tổng thể */
    .article-container {
        background-color: #fff;
        min-height: 100vh;
        padding-top: 40px;
        padding-bottom: 60px;
    }

    .article-wrapper {
        max-width: 800px; /* Chiều rộng chuẩn cho bài đọc */
        margin: 0 auto;
        padding: 0 20px;
    }

    /* 1. Breadcrumb & Meta */
    .article-meta {
        font-family: 'Inter', sans-serif;
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: 15px;
    }

    .category-tag {
        color: #0d6efd;
        font-weight: 700;
        text-transform: uppercase;
        text-decoration: none;
        letter-spacing: 0.5px;
    }

    /* 2. Tiêu đề (Headline) */
    .article-headline {
        font-family: 'Inter', sans-serif; /* Tiêu đề dùng font không chân hiện đại */
        font-size: 36px;
        font-weight: 800;
        color: #212529;
        line-height: 1.3;
        margin-bottom: 25px;
    }

    /* 3. Sapo (Mô tả ngắn) */
    .article-sapo {
        font-family: 'Merriweather', serif; /* Font có chân */
        font-size: 18px;
        font-weight: 700; /* Đậm hơn nội dung thường */
        color: #444;
        line-height: 1.6;
        margin-bottom: 30px;
    }

    /* 4. Ảnh đại diện (Featured Image) */
    .featured-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 30px;
        object-fit: cover;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

    /* 5. Nội dung chính (Body) */
    .article-body {
        font-family: 'Merriweather', serif; /* Font có chân dễ đọc */
        font-size: 18px; /* Kích thước chữ chuẩn báo chí */
        line-height: 1.8; /* Khoảng cách dòng thoáng */
        color: #212529;
    }

    /* CSS Quan trọng để xử lý HTML Raw từ CKEditor */
    .article-body img {
        max-width: 100% !important; /* Bắt buộc ảnh co lại vừa khung */
        height: auto !important;
        display: block;
        margin: 20px auto; /* Căn giữa ảnh */
        border-radius: 4px;
    }

    .article-body p {
        margin-bottom: 20px;
        text-align: justify; /* Căn đều 2 bên */
    }

    .article-body h2, .article-body h3 {
        font-family: 'Inter', sans-serif;
        font-weight: 700;
        margin-top: 40px;
        margin-bottom: 15px;
        color: #000;
    }

    .article-body blockquote {
        border-left: 4px solid #0d6efd;
        padding-left: 20px;
        margin: 30px 0;
        font-style: italic;
        color: #555;
        background: #f8f9fa;
        padding: 15px 20px;
    }

    /* Footer bài viết */
    .article-footer {
        margin-top: 50px;
        padding-top: 30px;
        border-top: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        color: #6c757d;
        text-decoration: none;
        font-weight: 600;
        transition: 0.2s;
        font-family: 'Inter', sans-serif;
    }
    .btn-back:hover { color: #0d6efd; }

    /* Responsive cho Mobile */
    @@media (max-width: 768px) {
        .article-headline { font-size: 26px; }
        .article-sapo { font-size: 16px; }
        .article-body { font-size: 17px; }
    }
</style>

<div class="article-container">
    <div class="article-wrapper">

        <div class="article-meta">
            <a href="#" class="category-tag">@Model.TheLoai</a>
            <span><i class="far fa-clock me-1"></i> @(Model.Ngaydang.HasValue ? Model.Ngaydang.Value.ToString("dd/MM/yyyy") : "")</span>
        </div>

        <h1 class="article-headline">@Model.Tieude</h1>

        @if (!string.IsNullOrEmpty(Model.Mota))
        {
            <div class="article-sapo">
                @Model.Mota
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.Hinhanh))
        {
            <img src="@Model.Hinhanh" alt="@Model.Tieude" class="featured-image" onerror="this.style.display='none'" />
        }

        <div class="article-body">
            @Html.Raw(Model.Noidung)
        </div>

        <div class="article-footer">
            <a href="@Url.Action("Index", "Home")" class="btn-back">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>

            <div class="share-buttons">
                <span class="text-muted small me-2">Chia sẻ:</span>
                <a href="#" class="text-primary me-2"><i class="fab fa-facebook fa-lg"></i></a>
                <a href="#" class="text-info"><i class="fab fa-twitter fa-lg"></i></a>
            </div>
        </div>

    </div>
</div>