@model PagedList.IPagedList<WebAppYte.Models.HoiDap>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Danh sách câu hỏi cần tư vấn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d6efd;
        --danger: #dc3545;
        --success: #198754;
        --bg-light: #f8f9fa;
        --border-color: #dee2e6;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f9;
    }

    .content-wrapper {
        min-height: 85vh;
        padding: 30px 0;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .page-title {
        font-weight: 700;
        color: #343a40;
        margin: 0;
        font-size: 24px;
        display: flex;
        align-items: center;
    }

    /* Table Card Container */
    .table-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid var(--border-color);
    }

    /* Custom Table */
    .table-custom {
        width: 100%;
        margin-bottom: 0;
        border-collapse: collapse;
    }

        .table-custom th {
            background-color: #f8f9fa;
            color: #495057;
            font-weight: 600;
            padding: 15px;
            text-transform: uppercase;
            font-size: 13px;
            border-bottom: 2px solid var(--border-color);
            text-align: left;
        }

        .table-custom td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid var(--border-color);
            color: #333;
            font-size: 14px;
        }

        .table-custom tr:last-child td {
            border-bottom: none;
        }

        .table-custom tr:hover {
            background-color: #fdfdfd;
        }

    /* Badges */
    .status-badge {
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
    }

    .badge-pending {
        background-color: #fff5f5;
        color: #c53030;
        border: 1px solid #feb2b2;
    }

    .badge-done {
        background-color: #f0fff4;
        color: #276749;
        border: 1px solid #9ae6b4;
    }

    /* Action Button */
    .btn-reply {
        background-color: var(--primary);
        color: white;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        border: none;
        box-shadow: 0 2px 5px rgba(13, 110, 253, 0.2);
    }

        .btn-reply:hover {
            background-color: #0b5ed7;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(13, 110, 253, 0.3);
        }

    /* Text Helpers */
    .text-question {
        max-width: 350px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2; /* Giới hạn 2 dòng */
        -webkit-box-orient: vertical;
        font-weight: 500;
    }

    .text-date {
        color: #6c757d;
        font-size: 13px;
    }

    /* Pagination */
    .pagination-wrapper {
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-top: 1px solid var(--border-color);
        background: white;
    }

    .pagination {
        display: inline-flex;
        padding-left: 0;
        list-style: none;
        margin: 0;
    }

        .pagination li {
            margin: 0 2px;
        }

            .pagination li a, .pagination li span {
                padding: 6px 12px;
                border-radius: 4px;
                border: 1px solid #dee2e6;
                color: var(--primary);
                text-decoration: none;
                font-size: 14px;
                background: white;
            }

            .pagination li.active span {
                background-color: var(--primary);
                color: white;
                border-color: var(--primary);
            }
</style>

<div class="container content-wrapper">

    <div class="page-header">
        <h3 class="page-title">
            <i class="fas fa-question-circle text-danger me-2"></i> Câu hỏi chưa trả lời
        </h3>
    </div>

    <div class="table-card">
        <table class="table-custom">
            <thead>
                <tr>
                    <th width="15%">Người hỏi</th>
                    <th width="35%">Nội dung câu hỏi</th>
                    <th width="15%">Ngày gửi</th>
                    <th width="15%">Trạng thái</th>
                    <th width="10%">Ghi chú</th>
                    <th width="10%" class="text-center">Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="fas fa-check-circle fa-2x mb-3 text-success"></i>
                            <p>Tuyệt vời! Không còn câu hỏi nào chưa trả lời.</p>
                        </td>
                    </tr>
                }

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="fw-bold text-dark">
                                <i class="far fa-user me-1 text-secondary"></i>
                                @Html.DisplayFor(modelItem => item.NguoiDung.HoTen)
                            </div>
                        </td>
                        <td>
                            <div class="text-question" title="@item.CauHoi">
                                @Html.DisplayFor(modelItem => item.CauHoi)
                            </div>
                        </td>
                        <td>
                            <div class="text-date">
                                <i class="far fa-clock me-1"></i>
                                @(item.NgayGui.HasValue ? item.NgayGui.Value.ToString("dd/MM/yyyy HH:mm") : "")
                            </div>
                        </td>
                        <td>
                            @if (item.TrangThai == 0)
                            {
                                <span class="status-badge badge-pending">
                                    <i class="fas fa-hourglass-half me-1"></i> Chưa trả lời
                                </span>
                            }
                            else
                            {
                                <span class="status-badge badge-done">
                                    <i class="fas fa-check me-1"></i> Đã trả lời
                                </span>
                            }
                        </td>
                        <td>
                            <span class="text-muted small">
                                @(string.IsNullOrEmpty(item.GhiChu) ? "-" : item.GhiChu)
                            </span>
                        </td>
                        <td class="text-center">
                            @if (item.TrangThai == 0)
                            {
                                <a href="@Url.Action("Traloicauhoi", new { id = item.IDHoidap })" class="btn-reply">
                                    <i class="fas fa-edit me-1"></i> Trả lời
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Traloicauhoi", new { id = item.IDHoidap })" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-eye"></i> Xem lại
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination-wrapper">
            <div class="text-muted small">
                Hiển thị trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trong tổng số @Model.PageCount trang
            </div>

            <div>
                @Html.PagedListPager(Model, page => Url.Action("listAll", new { page }),
                new PagedListRenderOptions
                     {
                    LiElementClasses = new string[] { "page-item" },
                    UlElementClasses = new string[] { "pagination" }
                })
            </div>
        </div>
    </div>
</div>