@model WebAppYte.Models.HoiDap

@{
    ViewBag.Title = "Phản hồi câu hỏi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d6efd;
        --secondary: #6c757d;
        --success: #198754;
        --bg-color: #f4f6f9;
        --card-border: #e9ecef;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-color);
    }

    .content-wrapper {
        min-height: 85vh;
        /* THAY ĐỔI: Chỉnh padding-top thành 20px để nội dung xích lên trên */
        padding: 0px 0 40px 0;
    }

    /* Page Header */
    .page-header {
        margin-bottom: 0px; /* Giảm margin dưới của header một chút */
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-title {
        font-weight: 700;
        color: #333;
        margin: 0;
        font-size: 24px;
        display: flex;
        align-items: center;
    }

    /* Cards */
    .custom-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        border: 1px solid var(--card-border);
        overflow: hidden;
        margin-bottom: 20px;
    }

    .card-header-custom {
        padding: 15px 20px;
        background-color: #f8f9fa;
        border-bottom: 1px solid var(--card-border);
        font-weight: 600;
        color: #495057;
        font-size: 15px;
        display: flex;
        align-items: center;
    }

        .card-header-custom i {
            margin-right: 8px;
            color: var(--primary);
        }

    .card-body-custom {
        padding: 25px;
    }

    /* Form Elements */
    .form-label-custom {
        font-weight: 600;
        color: #343a40;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
    }

    .form-control-custom {
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 10px 15px;
        font-size: 14px;
        width: 100%;
        transition: 0.2s;
        height: 40px !important; 
    }

        .form-control-custom:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
            outline: none;
        }

    .form-control-plaintext {
        background-color: #f8f9fa;
        color: #495057;
        cursor: not-allowed;
        border: 1px dashed #ced4da;
    }

    textarea.form-control-custom {
        min-height: 200px;
        resize: vertical;
        font-size: 15px;
        line-height: 1.6;
    }

    /* Buttons */
    .btn-submit {
        background-color: var(--success);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 6px;
        font-weight: 600;
        transition: 0.2s;
        display: inline-flex;
        align-items: center;
    }

        .btn-submit:hover {
            background-color: #157347;
            transform: translateY(-2px);
            color: white;
        }

    .btn-cancel {
        color: var(--secondary);
        text-decoration: none;
        padding: 10px 20px;
        font-weight: 500;
        display: inline-block;
    }

        .btn-cancel:hover {
            color: #333;
        }
</style>

<div class="container content-wrapper">

    <div class="page-header">
        <h3 class="page-title">
            <i class="fas fa-reply text-primary me-2"></i> Trả lời câu hỏi
        </h3>
        <a href="@Url.Action("Index", "Bacsi")" class="btn-cancel">
            <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
        </a>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.IDHoidap)

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="custom-card h-100">
                    <div class="card-header-custom">
                        <i class="fas fa-info-circle"></i> Thông tin câu hỏi
                    </div>
                    <div class="card-body-custom">

                        <div class="mb-3">
                            <label class="form-label-custom">Người hỏi</label>
                            @Html.DropDownList("IDNguoiDung", null, new { @class = "form-control form-control-custom form-control-plaintext", @disabled = "disabled" })
                            @Html.HiddenFor(model => model.IDNguoiDung)
                        </div>

                        <div class="mb-3">
                            <label class="form-label-custom">Ngày gửi</label>
                            @Html.EditorFor(model => model.NgayGui, new { htmlAttributes = new { @class = "form-control form-control-custom form-control-plaintext", @readonly = "readonly" } })
                        </div>

                        <div class="mb-3">
                            <label class="form-label-custom">Nội dung câu hỏi</label>
                            <div class="p-3 bg-light border rounded text-secondary" style="min-height: 100px;">
                                <i class="fas fa-quote-left text-muted me-2"></i>
                                @Html.DisplayFor(model => model.CauHoi)
                            </div>
                            @Html.HiddenFor(model => model.CauHoi)
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="custom-card">
                    <div class="card-header-custom">
                        <i class="fas fa-user-md"></i> Phần trả lời của Bác sĩ
                    </div>
                    <div class="card-body-custom">

                        <div class="mb-4">
                            <label class="form-label-custom">Nội dung tư vấn</label>
                            @Html.TextAreaFor(model => model.TraLoi, new { @class = "form-control form-control-custom", placeholder = "Nhập nội dung tư vấn chi tiết tại đây...", rows = "12" })
                            @Html.ValidationMessageFor(model => model.TraLoi, "", new { @class = "text-danger mt-1 small" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label-custom">Ghi chú nội bộ (Nếu có)</label>
                            @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control form-control-custom", placeholder = "Ghi chú thêm..." } })
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn-submit">
                                <i class="fas fa-paper-plane me-2"></i> Gửi câu trả lời
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>