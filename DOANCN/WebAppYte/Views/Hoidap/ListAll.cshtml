@model PagedList.IPagedList<WebAppYte.Models.HoiDap>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Thư viện Hỏi Đáp";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Lấy thông tin session
    var u = Session["user"] as WebAppYte.Models.NguoiDung;
    var userBS = Session["userBS"] as WebAppYte.Models.QuanTri;
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d6efd;
        --secondary: #6c757d;
        --success: #198754;
        --light-bg: #f8f9fa;
        --doctor-bg: #f0f9ff; /* Màu nền cho phần trả lời của bác sĩ */
        --card-border: #e9ecef;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f6f9;
    }

    /* Wrapper để đẩy footer xuống cuối */
    .content-wrapper {
        min-height: 80vh;
        display: flex;
        flex-direction: column;
    }

    /* Header */
    .page-header {
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #e9ecef;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin: 0;
        font-size: 26px;
    }

    /* Login Call-to-action */
    .login-cta {
        background: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 30px;
        border-left: 5px solid var(--primary);
    }

    .btn-login-custom {
        background-color: var(--success);
        color: white;
        padding: 10px 25px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s;
        border: none;
        display: inline-block;
    }

        .btn-login-custom:hover {
            background-color: #157347;
            color: white;
            transform: translateY(-2px);
        }

    /* Q&A Card Style */
    .qa-card {
        background: white;
        border-radius: 12px;
        border: 1px solid var(--card-border);
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        margin-bottom: 25px;
        overflow: hidden;
    }

    .qa-header {
        padding: 12px 20px;
        background-color: #fff;
        border-bottom: 1px solid #f0f0f0;
        font-size: 13px;
        color: var(--secondary);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .qa-body {
        padding: 25px;
    }

    /* Question Section */
    .question-section {
        margin-bottom: 25px;
    }

    .section-label {
        font-size: 12px;
        text-transform: uppercase;
        font-weight: 700;
        margin-bottom: 8px;
        display: block;
        letter-spacing: 0.5px;
    }

    .text-q {
        color: var(--secondary);
    }

    .text-a {
        color: var(--primary);
    }

    .content-text {
        font-size: 16px;
        color: #333;
        line-height: 1.6;
        font-weight: 500;
    }

    /* Answer Section (Doctor) */
    .answer-section {
        background-color: var(--doctor-bg);
        border-radius: 8px;
        padding: 20px;
        border-left: 4px solid var(--primary);
        position: relative;
    }

    .doctor-icon {
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 24px;
        color: rgba(13, 110, 253, 0.2);
    }

    /* Pagination */
    .pagination-wrapper {
        margin-top: auto;
        padding-top: 20px;
        text-align: center;
    }

    .pagination {
        display: inline-flex;
        padding-left: 0;
        list-style: none;
    }

        .pagination li {
            margin: 0 2px;
        }

            .pagination li a, .pagination li span {
                padding: 8px 16px;
                border-radius: 6px;
                border: 1px solid #dee2e6;
                color: var(--primary);
                text-decoration: none;
                background: white;
            }

            .pagination li.active span {
                background-color: var(--primary);
                color: white;
                border-color: var(--primary);
            }
</style>

<div class="container py-4 content-wrapper">
    <div class="col-md-10 mx-auto">

        <div class="page-header d-flex justify-content-between align-items-center">
            <h2 class="page-title">
                <i class="fas fa-book-medical text-primary me-2"></i> Thư viện Hỏi - Đáp
            </h2>
        </div>

        @if (u == null && userBS == null)
        {
            <div class="login-cta">
                <div>
                    <h5 class="fw-bold mb-1">Bạn có câu hỏi cần tư vấn?</h5>
                    <p class="text-muted mb-0 small">Đăng nhập ngay để gửi câu hỏi trực tiếp cho đội ngũ bác sĩ chuyên môn.</p>
                </div>
                <a href="@Url.Action("Dangnhap", "Home")" class="btn-login-custom">
                    <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập ngay
                </a>
            </div>
        }

        @foreach (var item in Model)
        {
            <div class="qa-card">
                <div class="qa-header">
                    <span>
                        <i class="fas fa-user-circle me-1 text-secondary"></i>
                        <b>@item.NguoiDung.HoTen</b>
                    </span>
                    <span>
                        <i class="far fa-clock me-1"></i>
                        @item.NgayGui.Value.ToString("dd/MM/yyyy HH:mm")
                    </span>
                </div>

                <div class="qa-body">
                    <div class="question-section">
                        <span class="section-label text-q"><i class="fas fa-question-circle"></i> Câu hỏi:</span>
                        <div class="content-text">
                            @Html.DisplayFor(modelItem => item.CauHoi)
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(item.TraLoi))
                    {
                        <div class="answer-section">
                            <i class="fas fa-user-md doctor-icon"></i> <span class="section-label text-a"><i class="fas fa-check-circle"></i> Bác sĩ trả lời:</span>
                            <div class="content-text">
                                @Html.DisplayFor(modelItem => item.TraLoi)
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted small">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trên tổng số @Model.PageCount
            </div>

            <div class="pagination-wrapper">
                @Html.PagedListPager(Model, page => Url.Action("listAll", new { page }),
                new PagedListRenderOptions
                     {
                    LiElementClasses = new string[] { "page-item" },
                    UlElementClasses = new string[] { "pagination" }
                })
            </div>
        </div>

    </div>
</div>