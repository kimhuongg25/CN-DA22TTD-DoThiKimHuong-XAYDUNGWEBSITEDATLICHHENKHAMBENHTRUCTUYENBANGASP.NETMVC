@model IEnumerable<WebAppYte.Models.TrungTamGanNhat>

@{
    ViewBag.Title = "Tìm kiếm trung tâm y tế";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --primary: #0d6efd;
        --bg-light: #f4f6f9;
    }

    body {
        background-color: var(--bg-light);
        font-family: 'Inter', sans-serif;
    }

    .content-wrapper {
        min-height: 85vh;
        padding: 40px 0;
    }

    .search-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        border: none;
        margin-bottom: 30px;
        padding: 30px;
    }

    .search-title {
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

    /* Style lại Form để tách rời */
    .search-form-container {
        display: flex;
        gap: 15px; /* Tạo khoảng cách 15px giữa các phần tử */
        align-items: center;
    }

    .form-select-custom {
        height: 50px;
        border-radius: 8px !important; /* Bo tròn đều 4 góc */
        border: 1px solid #ced4da;
        font-size: 15px;
        flex: 1; /* Dropdown giãn hết cỡ */
    }

    .btn-search {
        height: 50px;
        padding: 0 30px;
        border-radius: 8px !important; /* Bo tròn đều 4 góc */
        font-weight: 600;
        background-color: var(--primary);
        border: none;
        color: white;
        transition: all 0.2s;
        white-space: nowrap; /* Không cho chữ xuống dòng */
    }

        .btn-search:hover {
            background-color: #0b5ed7;
            transform: translateY(-1px);
        }

    /* Table Styles giữ nguyên */
    .table-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .table-custom {
        margin-bottom: 0;
        width: 100%;
    }

        .table-custom th {
            background-color: #f8f9fa;
            color: #495057;
            font-weight: 600;
            padding: 15px;
            text-transform: uppercase;
            font-size: 13px;
            border-bottom: 2px solid #dee2e6;
        }

        .table-custom td {
            padding: 15px;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
            color: #333;
        }

        .table-custom tr:hover {
            background-color: #f1f8ff;
        }

    .btn-detail {
        color: var(--primary);
        font-weight: 600;
        text-decoration: none;
        padding: 6px 12px;
        border-radius: 4px;
        background-color: #e7f1ff;
        font-size: 13px;
        transition: 0.2s;
    }

        .btn-detail:hover {
            background-color: var(--primary);
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
    }
</style>

<div class="container content-wrapper">

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="search-card">
                <h3 class="search-title">
                    <i class="fas fa-hospital-alt text-danger me-2"></i> Tìm Trung Tâm Y Tế Gần Nhất
                </h3>

                @using (Html.BeginForm("Index", "Trungtamyte", FormMethod.Post))
                {
                    /* THAY ĐỔI: Không dùng input-group nữa để dễ chỉnh khoảng cách */
                    <div class="search-form-container">

                        <div style="flex: 1; position: relative;">
                            <i class="fas fa-map-marker-alt text-primary" style="position: absolute; left: 15px; top: 17px; z-index: 2;"></i>

                            @Html.DropDownList("IDHuyen", (SelectList)ViewBag.IDTinh, "--- Chọn Quận/Huyện ---", new { @class = "form-control form-select-custom", style = "padding-left: 40px;", required = "required" })
                        </div>

                        <button type="submit" class="btn btn-search">
                            <i class="fas fa-search me-2"></i> Tìm kiếm
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            @if (Model != null && Model.Any())
            {
                <div class="table-card">
                    <table class="table table-custom">
                        <thead>
                            <tr>
                                <th width="30%">Tên Trung Tâm</th>
                                <th width="40%">Địa Chỉ</th>
                                <th width="15%">Khu vực</th>
                                <th width="15%" class="text-center">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold text-primary">@item.TenTrungTam</div>
                                    </td>
                                    <td>
                                        <i class="fas fa-map-pin text-muted small me-1"></i> @item.Mota
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            @item.Huyen.TenHuyen
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Details", new { id = item.IDTrungTam })" class="btn-detail">
                                            <i class="fas fa-info-circle me-1"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3 text-muted small text-end">
                    Tìm thấy <strong>@Model.Count()</strong> kết quả phù hợp.
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-search-location fa-4x text-muted mb-3" style="opacity: 0.3"></i>
                    <h5 class="text-secondary fw-bold">Chưa tìm thấy dữ liệu</h5>
                    <p class="text-muted">Vui lòng chọn Quận/Huyện và nhấn tìm kiếm để xem danh sách.</p>
                </div>
            }
        </div>
    </div>
</div>