@model WebAppYte.Models.QuanTri

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "QuanTris", new { area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>QuanTri</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDQuanTri)

        <div class="form-group">
            @Html.LabelFor(model => model.TaiKhoan, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VaiTro, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VaiTro, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThongTinBacSi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ThongTinBacSi, new { @class = "form-control", rows = 3 })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrinhDo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TrinhDo, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDKhoa, "IDKhoa", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDKhoa", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HoTen, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <!-- ẢNH BÌA + DRAG DROP -->
        <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa</label>
            <div class="col-md-10">

                <p>Ảnh hiện tại:</p>
                <img id="previewOld" src="~/Content/images/bacsi/@Model.AnhBia"
                     width="150" style="border:1px solid #aaa; margin-bottom:10px;" />

                <br /><br />

                <div id="drop-area"
                     style="width: 300px; height: 150px; border: 2px dashed #888; border-radius: 5px;
                            display: flex; align-items:center; justify-content:center; cursor:pointer;">

                    <span>Kéo ảnh vào đây hoặc bấm để chọn</span>
                </div>

                <input type="file" name="uploadAnhBia" id="fileInput"
                       style="display:none;" accept="image/*" />

                <br />

                <img id="previewNew" style="display:none; width:150px; border:1px solid #888;" />

            </div>
        </div>


        <!-- Nút lưu -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


<!-- SCRIPT DRAG & DROP -->
<script>
    var dropArea = document.getElementById("drop-area");
    var fileInput = document.getElementById("fileInput");
    var previewNew = document.getElementById("previewNew");

    dropArea.onclick = function () {
        fileInput.click();
    };

    dropArea.addEventListener("dragover", function (e) {
        e.preventDefault();
        dropArea.style.borderColor = "green";
    });

    dropArea.addEventListener("dragleave", function () {
        dropArea.style.borderColor = "#888";
    });

    dropArea.addEventListener("drop", function (e) {
        e.preventDefault();
        dropArea.style.borderColor = "#888";

        var file = e.dataTransfer.files[0];
        fileInput.files = e.dataTransfer.files;
        showPreview(file);
    });

    fileInput.addEventListener("change", function () {
        showPreview(this.files[0]);
    });

    function showPreview(file) {
        var reader = new FileReader();
        reader.onload = function (e) {
            previewNew.style.display = "block";
            previewNew.src = e.target.result;
        };
        reader.readAsDataURL(file);
    }
</script>
