@model WebAppYte.Models.HoiDap

@{
    ViewBag.Title = "Xóa câu hỏi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAd.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    :root {
        --danger: #e74a3b;
        --danger-dark: #be2617;
        --dark: #5a5c69;
        --bg-light: #f8f9fc;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
    }

    .content-wrapper {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    /* Delete Card */
    .delete-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 600px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
    }

    /* Header */
    .card-header-danger {
        background: linear-gradient(135deg, #e74a3b, #cf2e1e);
        padding: 30px;
        color: white;
        text-align: center;
    }

    .warning-icon {
        font-size: 50px;
        margin-bottom: 15px;
        opacity: 0.9;
        animation: pulse 2s infinite;
    }

    .card-title {
        font-weight: 800;
        font-size: 22px;
        margin: 0 0 5px 0;
        text-transform: uppercase;
    }

    .card-subtitle {
        font-size: 14px;
        opacity: 0.9;
    }

    /* Body */
    .card-body {
        padding: 30px;
    }

    .info-group {
        margin-bottom: 20px;
    }

    .info-label {
        font-size: 13px;
        font-weight: 600;
        color: #858796;
        margin-bottom: 5px;
        display: block;
        text-transform: uppercase;
    }

    .content-box {
        background-color: #f8f9fc;
        border-left: 4px solid var(--danger);
        padding: 15px;
        border-radius: 4px;
        color: #333;
        font-style: italic;
        margin-bottom: 20px;
    }

    .meta-info {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px dashed #e3e6f0;
        padding-bottom: 15px;
        margin-bottom: 15px;
    }

    .meta-item {
        font-size: 14px;
        color: #5a5c69;
    }

    .meta-item strong {
        color: #2c3e50;
    }

    /* Buttons */
    .btn-delete {
        background-color: var(--danger);
        color: white;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 6px;
        border: none;
        width: 100%;
        transition: 0.2s;
        text-transform: uppercase;
    }

    .btn-delete:hover {
        background-color: var(--danger-dark);
        color: white;
        transform: translateY(-2px);
    }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #858796;
        text-decoration: none;
        font-weight: 500;
        transition: 0.2s;
    }

    .btn-cancel:hover { color: #5a5c69; text-decoration: underline; }

    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
</style>

<div class="content-wrapper">
    <div class="delete-card">

        <div class="card-header-danger">
            <i class="fas fa-trash-alt warning-icon"></i>
            <h3 class="card-title">Xác nhận xóa dữ liệu</h3>
            <p class="card-subtitle">Hành động này sẽ xóa vĩnh viễn câu hỏi và câu trả lời liên quan.</p>
        </div>

        <div class="card-body">
            <div class="meta-info">
                <div class="meta-item">
                    <i class="fas fa-user text-muted"></i> Người gửi:
                    <strong>@Html.DisplayFor(model => model.NguoiDung.HoTen)</strong>
                </div>
                <div class="meta-item">
                    <i class="far fa-calendar-alt text-muted"></i> Ngày:
                    <strong>@(Model.NgayGui.HasValue ? Model.NgayGui.Value.ToString("dd/MM/yyyy") : "--/--/----")</strong>
                </div>
            </div>

            <label class="info-label">Nội dung câu hỏi:</label>
            <div class="content-box">
                "@Html.DisplayFor(model => model.CauHoi)"
            </div>

            @if (!string.IsNullOrEmpty(Model.TraLoi))
            {
                <label class="info-label">Đã trả lời:</label>
                <p class="text-muted small">
                    <i class="fas fa-check-circle text-success"></i>
                    Câu hỏi này đã có câu trả lời từ Admin. Xóa câu hỏi sẽ mất cả phần trả lời.
                </p>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4">
                    <button type="submit" class="btn-delete">
                        <i class="fas fa-times-circle me-2"></i> Xóa vĩnh viễn
                    </button>

                    <a href="@Url.Action("Index")" class="btn-cancel">
                        <i class="fas fa-arrow-left"></i> Không xóa, quay lại danh sách
                    </a>
                </div>
            }
        </div>
    </div>
</div>